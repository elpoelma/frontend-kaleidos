<div class="auk-modal__body">
  <div class="auk-u-p-4">
    <div class="auk-o-flex--align-end auk-u-mb-2">
      <div class="auk-form-group">
        <Auk::Label>{{t "date-publication"}}</Auk::Label>
        {{web-components/vl-datepicker
          enableTime=true
          selectedDate=date
          defaultHour=14
          defaultMinute=0
          dateChanged=(action "selectDate")
        }}
      </div>
      <div class="auk-form-group">
        <Auk::Label>{{t "newsletter-doc-date"}}</Auk::Label>
        {{web-components/vl-datepicker
          enableTime=true
          selectedDate=docDate
          defaultHour=14
          defaultMinute=0
          dateChanged=(action "selectDocDate")
        }}
      </div>
    </div>
  </div>
</div>
<div class="auk-modal__footer auk-modal__footer--bordered">
  <Auk::Toolbar>
    <Auk::Toolbar::Group @position="left">
      <Auk::Toolbar::Item>
        <Auk::Button
          @skin="borderless"
          {{action "close"}}
        >
          {{t "cancel"}}
        </Auk::Button>
      </Auk::Toolbar::Item>
    </Auk::Toolbar::Group>
    <Auk::Toolbar::Group @position="right">
      <Auk::Toolbar::Item>
        {{web-components/vl-save-button
          text=(t "save")
          isLoading=isLoading
          saveAction=(action "saveChanges" selectedMeeting)
        }}
      </Auk::Toolbar::Item>
    </Auk::Toolbar::Group>
  </Auk::Toolbar>
</div>
