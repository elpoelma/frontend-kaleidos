<div class="auk-modal__content">
  <div class="auk-u-flex--align-end auk-u-mb-2">
    <div class="auk-form-group">
      <WebComponents::AuLabel>{{t "date-publication"}}</WebComponents::AuLabel>
      {{web-components/vl-datepicker
        enableTime=true
        selectedDate=date
        defaultHour=14
        defaultMinute=0
        dateChanged=(action "selectDate")
      }}
    </div>
    <div class="auk-form-group">
      <WebComponents::AuLabel>{{t "newsletter-doc-date"}}</WebComponents::AuLabel>
      {{web-components/vl-datepicker
        enableTime=true
        selectedDate=docDate
        defaultHour=14
        defaultMinute=0
        dateChanged=(action "selectDocDate")
      }}
    </div>
  </div>
</div>
<div class="auk-navbar auk-navbar--white auk-navbar--bordered-top">
  <div class="auk-toolbar-complex">
    <div class="auk-toolbar-complex__left">
      <div class="auk-toolbar-complex__item">
        <button type="button" class="auk-button auk-button--borderless"
          {{action "close"}}
        >
          {{t "cancel"}}
        </button>
      </div>
    </div>
    <div class="auk-toolbar-complex__right">
      <div class="auk-toolbar-complex__item">
        {{web-components/vl-save-button
          text=(t "save")
          isLoading=isLoading
          saveAction=(action "saveChanges" selectedMeeting)
        }}
      </div>
    </div>
  </div>
</div>
