<div class="auk-modal__body">
  <div class="auk-u-p-4">
    <div class="auk-o-flex--align-end auk-u-mb-2">
      <div class="auk-form-group">
        <Auk::Label>{{t "date-publication"}}</Auk::Label>
        {{web-components/vl-datepicker
          enableTime=true
          selectedDate=date
          defaultHour=14
          defaultMinute=0
          dateChanged=(action "selectDate")
        }}
      </div>
      <div class="auk-form-group">
        <Auk::Label>{{t "newsletter-doc-date"}}</Auk::Label>
        {{web-components/vl-datepicker
          enableTime=true
          selectedDate=docDate
          defaultHour=14
          defaultMinute=0
          dateChanged=(action "selectDocDate")
        }}
      </div>
    </div>
  </div>
</div>
<div class="auk-modal__footer auk-modal__footer--bordered">
  <div class="auk-toolbar-complex">
    <div class="auk-toolbar-complex__left">
      <div class="auk-toolbar-complex__item">
        <button type="button" class="auk-button auk-button--borderless"
          {{action "close"}}
        >
          <span class="auk-button__content">
            {{t "cancel"}}
          </span>
        </button>
      </div>
    </div>
    <div class="auk-toolbar-complex__right">
      <div class="auk-toolbar-complex__item">
        {{web-components/vl-save-button
          text=(t "save")
          isLoading=isLoading
          saveAction=(action "saveChanges" selectedMeeting)
        }}
      </div>
    </div>
  </div>
</div>
