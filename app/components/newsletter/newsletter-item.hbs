{{#if (is-pending newsletterInfo)}}
  <WebComponents::VlLoader @text={{t "newsletter-info-loading-text"}} />
{{else if (not isEditing)}}
  {{#if (not allowEditing)}}
    {{#if (await newsletterInfo.inNewsletter)}}
      <Newsletter::NewsletterItem::ItemContent
        @allowEditing={{allowEditing}}
        @onStartEditing={{action "startEditing"}}
        @itemIndex={{itemIndex}}
        @showIndex={{showIndex}}
        @isEditing={{isEditing}}
        @agendaitem={{agendaitem}}
        @newsletterInfo={{newsletterInfo}}
      />
    {{/if}}
  {{else}}
    <Newsletter::NewsletterItem::ItemContent
      @allowEditing={{allowEditing}}
      @onStartEditing={{action "startEditing"}}
      @itemIndex={{itemIndex}}
      @showIndex={{showIndex}}
      @isEditing={{isEditing}}
      @agendaitem={{agendaitem}}
      @newsletterInfo={{newsletterInfo}}
    />
  {{/if}}
{{else}}
  <NewsItem::EditItem
    @agendaitem={{this.agendaitem}}
    @newsletterInfo={{this.newsletterInfo}}
    @onSave={{action "stopEditing"}}
    @onCancel={{action "stopEditing"}}
  />
{{/if}}