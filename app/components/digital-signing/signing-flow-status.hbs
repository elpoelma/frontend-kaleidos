{{# if this.loadSigningFlowStatus.lastSuccessful}}
  <Auk::StatusPill>
    {{#let this.loadSigningFlowStatus.lastSuccessful.value as |status|}}
      {{#if (eq status this.SIGNING_STATUS.MARKED)}}
        {{t "signing-status-to-be-presented"}}
      {{else if (eq status this.SIGNING_STATUS.IN_PREPARATION)}}
        {{t "signing-status-to-be-presented"}}
      {{else if (eq status this.SIGNING_STATUS.READY_FOR_SENDING)}}
        {{t "signing-status-to-be-presented"}}
      {{else if (eq status this.SIGNING_STATUS.AWAITING_SIGNATURES)}}
        {{t "signing-status-signed-x-count" done=this.nSigned total=this.nSigners}}
      {{else if (eq status this.SIGNING_STATUS.SIGNED)}}
        {{t "signing-status-signed"}}
      {{/if}}
    {{/let}}
  </Auk::StatusPill>
{{/if}}