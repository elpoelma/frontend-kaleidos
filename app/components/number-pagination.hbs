<div data-test-number-pagination-container class="vlc-pagination__container vlc-pagination__container-spacebetween">
  <div>
    <p class="vlc-pagination__fontsize">
      {{this.startItem}}-{{this.endItem}}{{#if this.total}} {{t "table-of"}} {{this.total}}{{/if}}
      {{#if this.hasMultiplePages}}
        {{#if (not this.isFirstPage)}}
          <a href="#" {{action "changePage" this.links.prev}}> {{t "table-previous-with-arrow"}}</a>
        {{/if}}
        {{#if (not this.isLastPage)}}
          <a href="#" {{action "changePage" this.links.next}}>{{t "table-next-with-arrow"}}</a>
        {{/if}}
      {{/if}}
    </p>
  </div>
  {{#if this.sizeOptions}}
    <div class="vlc-pagination__container">
      <p class="vlc-pagination__fontsize vlc-pagination-nowrap">{{t "amount-per-page"}}</p>
      <div>
        <PowerSelect
          @options={{this.sizeOptions}}
          @selected={{this.size}}
          @onChange={{action "selectSize"}}
        as |sizeValue|>
          {{sizeValue}}
        </PowerSelect>
      </div>
    </div>
  {{/if}}
</div>