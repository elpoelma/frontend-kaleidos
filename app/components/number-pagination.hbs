<div data-test-number-pagination-container class="auk-pagination auk-pagination--small">
  <ul class="auk-pagination__list">
    <li class="auk-pagination__element">
      <p><strong>{{this.startItem}}-{{this.endItem}}</strong> {{#if this.total}} {{t "table-of"}} {{this.total}}{{/if}}</p>
    </li>
    {{#if this.hasMultiplePages}}
      <li class="auk-pagination__element">
        <Auk::ButtonLink
          @icon="chevron-left"
          @disabled={{this.isFirstPage}}
          {{action "changePage" this.links.prev}}
        >
          {{t "previous"}}
        </Auk::ButtonLink>
      </li>
      <li class="auk-pagination__element">
        <Auk::ButtonLink
          @icon="chevron-right"
          @layout="icon-right"
          @disabled={{this.isLastPage}}
          {{action "changePage" this.links.next}}
        >
          {{t "next"}}
        </Auk::ButtonLink>
      </li>
    {{/if}}
  </ul>
  {{#if this.sizeOptions}}
    <ul class="auk-pagination__size-options">
      <li class="auk-pagination__element">
        <p class="auk-u-text-nowrap">{{t "amount-per-page"}}</p>
      </li>
      <li class="auk-pagination__element">
        <PowerSelect
          @options={{this.sizeOptions}}
          @selected={{this.size}}
          @searchEnabled={{false}}
          @onchange={{action "selectSize"}}
        as |sizeValue|>
          {{sizeValue}}
        </PowerSelect>
      </li>
    </ul>
  {{/if}}
</div>