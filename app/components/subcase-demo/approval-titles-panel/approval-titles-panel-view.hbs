<div {{did-update (perform this.loadAgendaData)}}>
  <Auk::Panel data-test-subcase-description-panel>
    <Auk::Panel::Header>
      <Auk::Toolbar>
        <Auk::Toolbar::Group @position="left">
          <Auk::Toolbar::Item>
            <div class="au-u-flex au-u-flex--spaced-small">
              <h4 class="auk-panel__title">
                Overzicht
              </h4>
              
            </div>
          </Auk::Toolbar::Item>
        </Auk::Toolbar::Group>
        {{#if @allowEditing}}
          <Auk::Toolbar::Group @position="right">
            <Auk::Toolbar::Item>
              <AuButton
                data-test-subcase-description-edit
                @skin="naked"
                @icon="pencil"
                {{on "click" @onClickEdit}}
              >
                {{t "edit"}}
              </AuButton>
            </Auk::Toolbar::Item>
            {{#if (eq @step 'Definitieve goedkeuring')}}
            <Auk::Toolbar::Item>
              <AuButton
                data-test-subcase-description-edit
                @skin="naked"
                @icon="export"
              >
                Verstuur naar Vlaams Parlement
              </AuButton>
            </Auk::Toolbar::Item>
            {{/if}}
          </Auk::Toolbar::Group>
        {{/if}}
      </Auk::Toolbar>
    </Auk::Panel::Header>
    <Auk::Panel::Body>
      <AuHeading @level="4" @skin="4">Ontwerp van decreet over {{@subcase.shortTitle}}</AuHeading>
    </Auk::Panel::Body>
    <Auk::Panel::Body class="auk-u-bg-alt">
      <AuHeading @level="4" @skin="6">{{@step}} m.h.o. op adviesaanvragen</AuHeading>
      <ul class="vlc-status-timeline">
        <li
          class="vlc-status-timeline__item vlc-status-timeline__item--neutral"
        >
          <div class="vlc-status-timeline__dot"></div>
          <div class="vlc-status-timeline__text">
            Ingediend voor agendering op <AuLinkExternal>30 november 2023</AuLinkExternal>
          </div>
        </li>
        <li
          class="vlc-status-timeline__item vlc-status-timeline__item--neutral"
        >
          <div class="vlc-status-timeline__dot"></div>
          <div class="vlc-status-timeline__text">
            Geagendeerd op agenda van <AuLinkExternal>30 november 2023</AuLinkExternal>
          </div>
        </li>
      </ul>
    </Auk::Panel::Body>
    <Auk::Panel::Body>
      <div class="au-o-grid au-o-grid--small au-u-1-1">
        <div class="au-o-grid__item au-u-1-2 au-u-1-4@medium">
          <AuHeading @level="4" @skin="6">Geagendeerd op</AuHeading>
          <p class="auk-u-mt-1">30 november 2023</p>
        </div>
        <div class="au-o-grid__item au-u-1-2 au-u-1-4@medium">
          <AuHeading @level="4" @skin="6">Nummer vergadering</AuHeading>
          <p class="auk-u-mt-1">1446 (2022-2023) nr. 1</p>
        </div>
        <div class="au-o-grid__item au-u-1-2 au-u-1-4@medium">
          <AuHeading @level="4" @skin="6">Ingediend door</AuHeading>
          <p class="auk-u-mt-1">Bart Somers</p>
        </div>
        <div class="au-o-grid__item au-u-1-2 au-u-1-4@medium">
          <AuHeading @level="4" @skin="6">Aangevraagd voor Bijzondere ministerraad</AuHeading>
          <p class="auk-u-mt-1">30 november 2023</p>
        </div>
      </div>
      <div class="au-o-grid au-o-grid--small au-u-1-1">
        <div class="au-o-grid__item au-u-1-2 au-u-1-4@medium">
          <AuHeading @level="4" @skin="6">Status</AuHeading>
          <AuPill @skin="success" @size="small">{{@status}}</AuPill>
        </div> 
      </div>
    </Auk::Panel::Body>
  </Auk::Panel>
</div>



  

  
