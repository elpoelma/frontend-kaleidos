<div class="auk-modal__footer auk-modal__footer--bordered">
  <Auk::Toolbar @size="large">
    <Auk::Toolbar::Group @position="left">
      <Auk::Toolbar::Item>
        <AuButton
          data-test-vl-modal-footer-cancel
          @skin="naked"
          {{on "click" @cancelAction}}
        >
          {{@cancelButtonText}}
        </AuButton>
      </Auk::Toolbar::Item>
    </Auk::Toolbar::Group>
    <Auk::Toolbar::Group @position="right">
      <Auk::Toolbar::Item>
        <AuButton
          data-test-vl-modal-footer-save={{true}}
          @skin="primary"
          {{!-- also disable button when 'isLoading', since the loading state on button doesn't block interaction.
            Disabling the button while in loading state is important in order to avoid multiple
            action calls when clicking multiple times on the same confirm-button --}}
          @disabled={{or @disableSave @isLoading}}
          @loading={{@isLoading}}
          @loadingMessage={{t "please-be-patient"}}
          {{on "click" @saveAction}}
        >
          {{@saveButtonText}}
        </AuButton>
      </Auk::Toolbar::Item>
    </Auk::Toolbar::Group>
  </Auk::Toolbar>
</div>