<fieldset>
  <legend class="auk-label">{{this.title}}</legend>
  <Auk::RadioList @layout="inline" as |RadioList|>
    {{#each this.optionList as |option index|}}
      <RadioList.Radio
        @label={{option.label}}
        @checked={{if
          this.selectedModel
          (eq option.id this.selectedModel.id)
          (eq index 0)
        }}
        onchange={{fn (action "modelChanged") option.id}}
      />
    {{/each}}
  </Auk::RadioList>
</fieldset>