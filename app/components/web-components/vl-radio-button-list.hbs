<fieldset>
  <legend class="auk-label">{{title}}</legend>
  <Auk::RadioList @layout="inline">
    {{#each optionList as |option index|}}
      {{#if selectedModel}}
        <Auk::Radio
          value={{option.id}}
          name={{title}}
          checked={{eq option.id selectedModel.id}}
          onchange={{action "modelChanged"}}
          @label={{option.label}}
        />
      {{else}}
        <Auk::Radio
          value={{option.id}}
          name={{title}}
          checked={{eq index 0}}
          onchange={{action "modelChanged"}}
          @label={{option.label}}
        />
      {{/if}}
    {{/each}}
  </Auk::RadioList>
</fieldset>