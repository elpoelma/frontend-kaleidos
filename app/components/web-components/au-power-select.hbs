<PowerSelect
  @options={{this.options}}
  @searchEnabled={{@isSearchable}}
  @selected={{@selected}}
  @search={{@search}}
  @placeholder={{this.placeholder}}
  @noMatchesMessage={{this.getMatchesMessage}}
  @onchange={{@onchange}}
  @disabled={{@disabled}}
    as |item|>
  {{#if item.icon }}
    <Auk::Icon @name={{item.icon.svg}} @skin={{item.icon.color}} />
  {{/if}}
  {{item.label}}
</PowerSelect>