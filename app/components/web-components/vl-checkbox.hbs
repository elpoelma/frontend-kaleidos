<label data-test-vl-checkbox-label class="auk-checkbox">
  <Input
    class="auk-checkbox__toggle"
    @type="checkbox"
    @checked={{value}}
    @disabled={{disabled}}
    data-test-vl-checkbox={{true}}
    @input={{action "toggle"}}
  />
  {{label}}
  <span class="auk-checkbox__box"></span>
</label>