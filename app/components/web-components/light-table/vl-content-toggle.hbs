{{!-- template-lint-disable no-action require-input-label --}}
{{#if this.isLoading}}
  <div class="auk-loader" role="alert" aria-busy="true"></div>
{{else}}
  <input
    class="vl-toggle"
    type="checkbox"
    value="1"
    checked={{await this.value}}
  >

  <label class="vl-toggle__label"
    {{action "valueChanged" this.row bubbles=false}}
  >
    <span aria-hidden="true"></span>
    <span class="auk-u-sr-only"></span>
  </label>
{{/if}}