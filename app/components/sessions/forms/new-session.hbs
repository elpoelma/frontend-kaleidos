<div class="auk-modal__content">
  {{utils/kind-selector kind=kind setAction=(action "setKind")}}

  {{#if this.isAnnexMeeting}}
    <div class="auk-u-mb-2">
      <div class="auk-form-group">
        <WebComponents::AuLabel>{{t "related-main-meeting-field-label"}}</WebComponents::AuLabel>
        {{utils/model-selector
          modelName="meeting"
          searchField="numberRepresentation"
          propertyToShow="label"
          sortField="-planned-start"
          selectedItems=selectedMainMeeting
          selectModel=(action "selectMainMeeting")
        }}
      </div>
    </div>
  {{else}}
    <div class="auk-u-mb-2">
      <div class="auk-form-group">
        <WebComponents::AuLabel>{{t "start-date"}}</WebComponents::AuLabel>
        {{web-components/vl-datepicker
          enableTime=true
          defaultHour=10
          defaultMinute=0
          dateChanged=(action "selectStartDate")
        }}
      </div>
    </div>
  {{/if}}
  <div class="auk-u-mb-2">
    <div class="auk-form-group" style="display: flex; flex-direction: column">
      <WebComponents::AuLabel>{{t "meeting-number"}}</WebComponents::AuLabel>
      <div class="vlc-new-session__flex">
        {{#unless this.isAnnexMeeting}}
          {{web-components/vl-form-input
            type="number"
            value=meetingNumber
            input=(action "meetingNumberChangedAction" meetingNumber)
            class="auk-input--w-medium"
          }}
        {{/unless}}
        <div class="vlc-new-session vlc-new-session__flex">
          <span class="vlc-new-session__label">
            <span class="vlc-new-session__identifier" data-test-meeting-formattedMeetingIdentifier>{{formattedMeetingIdentifier}}</span>
            <button type="button" class="auk-button-link"
              data-test-meeting-edit-identifier-button
              {{action "editFormattedMeetingIdentifier"}}
            >
              <small>{{t "edit"}}</small>
            </button>
          </span>
        </div>
      </div>
    </div>
    {{#if isEditingFormattedMeetingIdentifier}}
      <div class="vlc-new-session__meetingNumberPrefix">
        <div class="vlc-new-session__flex">
          {{web-components/vl-form-input
            data-test-meeting-formattedMeetingIdentifier-edit-value=true
            value=formattedMeetingIdentifier
            class="vlc-new-session__meetingNumberPrefix__container auk-input--w-medium"
          }}
          {{web-components/vl-save-button
            text=(t "save")
            saveAction=(action "saveAction")
          }}
        </div>
      </div>
    {{/if}}
  </div>
  {{#unless this.isAnnexMeeting}}
    <div class="auk-u-mb-2">
      <div class="auk-form-group">
        <WebComponents::AuLabel>{{t "meeting-location"}}</WebComponents::AuLabel>
        {{web-components/vl-form-input value=extraInfo}}
      </div>
    </div>
  {{/unless}}
</div>
{{web-components/vl-modal-footer
  isLoading=isLoading
  cancelButtonText=(t "cancel")
  saveButtonText=(t "add")
  cancelAction=(action "cancelForm")
  saveAction=(action "createNewSession")
}}