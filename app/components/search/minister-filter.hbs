{{#if this.loadCurrentMinisters.isRunning}}
  <Auk::Loader />
{{else}}
  <AuCheckbox
    @checked={{this.allCurrentMinistersSelected}}
    @indeterminate={{and (not this.allCurrentMinistersSelected) this.someCurrentMinistersSelected}}
    @onChange={{this.toggleAllCurrentMinisters}}
  >
    <strong>{{t "current-ministers"}}</strong>
  </AuCheckbox>
  <div class="auk-u-ml-2">
    <Auk::CheckboxList>
      {{#each this.currentMinisters as |minister|}}
        <AuCheckbox
          @checked={{includes minister.id @selected}}
          @onChange={{fn this.toggleMinister minister}}
        >
          {{minister.fullName}}
        </AuCheckbox>
      {{/each}}
    </Auk::CheckboxList>
  </div>
  {{#if this.pastMinistersHidden}}
    <AuButton
      {{on "click" (toggle "pastMinistersHidden" this)}}
      @skin="link"
      class="au-u-h-functional au-u-padding-left-none au-u-margin-top-tiny"
      @icon="add"
    >
      {{t "show-past-ministers"}}
    </AuButton>
  {{else if this.loadPastMinisters.isRunning}}
    <Auk::Loader />
  {{else}}
    <AuCheckbox
      @checked={{this.allPastMinistersSelected}}
      @indeterminate={{and (not this.allPastMinistersSelected) this.somePastMinistersSelected}}
      @onChange={{this.toggleAllPastMinisters}}
    >
      <strong>{{t "past-ministers"}}</strong>
    </AuCheckbox>
    <div class="auk-u-ml-2">
      <Auk::CheckboxList>
        {{#each this.pastMinisters as |minister|}}
          <AuCheckbox
            @checked={{includes minister.id @selected}}
            @onChange={{fn this.toggleMinister minister}}
          >
            {{minister.fullName}}
          </AuCheckbox>
        {{/each}}
      </Auk::CheckboxList>
    </div>
    <AuButton
      {{on "click" (toggle "pastMinistersHidden" this)}}
      @skin="link"
      class="au-u-h-functional au-u-padding-left-none au-u-margin-top-tiny"
      @icon="remove"
    >
      {{t "hide-past-ministers"}}
    </AuButton>
  {{/if}}
{{/if}}