<AuCard
  @shadow={{true}}
  @size="small"
  class="result-card"
  as |c|
>
  <c.header>
    <div class="au-u-flex au-u-flex--vertical-center au-u-flex--spaced-tiny">
      <p class="au-u-para-small au-u-muted au-u-medium">
        {{date @created}}
      </p>
    </div>
    <AuHeading @level="3" @skin="6">
      <AuLink
        class="au-u-padding-none"
        @route="document"
        @model={{@documentId}}
      >
        {{@title}}
      </AuLink>
    </AuHeading>
  </c.header>
  <c.content>
    {{!-- <p class="au-u-para">Tekst ...... <strong>test</strong> ....... tekst</p> --}}
    {{#if (and @agendaitemShortTitle @meetingId @agendaId @agendaitemId)}}
      <p class="au-u-para-small au-u-muted">
        {{t "found-in-thing" thing=(t "agendaitem")}}
        <AuLink
          @route="agenda.agendaitems.agendaitem"
          @models={{array @meetingId @agendaId @agendaitemId}}
        >
          {{@agendaitemShortTitle}}
        </AuLink>
      </p>
    {{/if}}
  </c.content>
</AuCard>