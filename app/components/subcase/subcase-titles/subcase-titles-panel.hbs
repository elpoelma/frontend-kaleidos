{{#if this.isEditing}}
  <Subcase::SubcaseTitles::SubcaseTitlesPanelEdit
    @subcase={{@subcase}}
    @onCancel={{this.cancelEditing}}
    @onSave={{this.stopEditing}}
  />
{{else}}
  <Subcase::SubcaseTitles::SubcaseTitlesPanelView
    @subcase={{@subcase}}
    @allowEditing={{@allowEditing}}
    @onClickEdit={{this.startEditing}}
  />
{{/if}}