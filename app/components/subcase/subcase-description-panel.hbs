{{#if this.isEditing}}
  <Subcase::SubcaseDescriptionPanel::SubcaseDescriptionEdit
    @subcase={{@subcase}}
    @onCancel={{this.cancelEditing}}
    @onSave={{this.stopEditing}}
  />
{{else}}
  <Subcase::SubcaseDescriptionPanel::SubcaseDescriptionView
    @subcase={{@subcase}}
    @onClickEdit={{this.startEditing}}
  />
{{/if}}