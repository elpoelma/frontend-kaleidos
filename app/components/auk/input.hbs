{{#if @icon}}
  <div class="auk-input-with-icon">
    <Input
      class="auk-input {{this.error}} {{this.block}}"
      @type={{@type}}
      @enter={{@enter}}
      @value={{@value}}
      @insert-newline={{@insert-newline}}
      @escape-press={{@escape-press}}
      ...attributes
    />
    <Auk::Icon @name={{@icon}} />
  </div>
{{else}}
  <Input
    class="auk-input {{this.error}} {{this.block}}"
    @type={{@type}}
    @enter={{@enter}}
    @value={{@value}}
    @insert-newline={{@insert-newline}}
    @escape-press={{@escape-press}}
    ...attributes
  />
{{/if}}