<li class={{@class}}>
  {{#if @href}}
    <a class="auk-menu__item active {{this.skin}}" href={{@href}} ...attributes>
      {{yield}}
    </a>
  {{else if @textOnly}}
    <div class="auk-menu__item--text-only" ...attributes>
      {{yield}}
    </div>
  {{else}}
    <LinkTo
      class="auk-menu__item active {{this.skin}}"
      @route={{@route}}
      @models={{this.models}}
      @disabled={{@disabled}}
      @activeClass={{@activeClass}}
      @current-when={{@current-when}}
      @preventDefault={{@preventDefault}}
      @query={{@query}}
      ...attributes
    >
      {{yield}}
    </LinkTo>
  {{/if}}
</li>