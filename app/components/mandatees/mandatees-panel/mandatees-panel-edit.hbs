<Auk::Panel class="auk-panel--editing">
  <Auk::Panel::Header>
    <Auk::Toolbar>
      <Auk::Toolbar::Group @position="left">
        <Auk::Toolbar::Item>
          <h4 class="auk-panel__title">{{t "ministers"}}</h4>
        </Auk::Toolbar::Item>
      </Auk::Toolbar::Group>
      <Auk::Toolbar::Group @position="right">
        <Auk::Toolbar::Item>
          <AuButton
            @skin="naked"
            @icon="plus"
            {{on "click" this.openSelectMandatee}}
            data-test-mandatee-panel-edit-add-mandatee
          >
            {{t "add-minister"}}
          </AuButton>
        </Auk::Toolbar::Item>
      </Auk::Toolbar::Group>
    </Auk::Toolbar>
  </Auk::Panel::Header>
  <Auk::Panel::Body @noPadding={{true}}>
    <div class="auk-form-group auk-u-mx-2">
      <table class="auk-table">
        <thead class="au-u-hidden-visually">
          <tr>
            <th class="auk-table__col--10">
              {{t "minister"}}
            </th>
            <th class="auk-table__col--1">
              {{t "submitter"}}
            </th>
            <th class="auk-table__col--1"></th>
          </tr>
        </thead>
        <tbody>
          {{#each this.mandateesBuffer as |mandatee|}}
            <tr data-test-mandatee-panel-edit-mandatee-row>
              <td class="auk-table__col--10">
                {{mandatee.person.fullName}}, {{mandatee.title}}
              </td>
              <td class="auk-table__col--1" data-test-mandatee-panel-edit-row-submitter>
                {{!-- <AuToggleSwitch
                  @checked={{eq mandatee this.submitterBuffer}}
                  @onChange={{fn this.toggleIsSubmitter mandatee}}
                /> --}}
                <div class="au-u-flex au-u-flex--vertical-center au-u-flex--spaced-tiny">
                  <AuRadio
                    @name="submitter"
                    @checked={{eq mandatee this.submitterBuffer}}
                    @onChange={{fn this.toggleIsSubmitter mandatee}}
                  />
                  <Auk::Label for="first" class="au-u-padding-bottom-none">Indiener</Auk::Label>
                </div>
              </td>
              <td class="auk-table__col--1 auk-u-text-align--right auk-o-flex--vertical-center">
                <AuButton
                  data-test-mandatee-panel-edit-row-delete
                  @skin="naked"
                  @alert={{true}}
                  @icon="trash"
                  @hideText={{true}}
                  {{on "click" (fn this.removeMandatee mandatee)}}
                >
                  {{t "delete"}}
                </AuButton>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </Auk::Panel::Body>
  <Auk::Panel::Footer>
    <Auk::Toolbar @auto={{true}}>
      <Auk::Toolbar::Group @position="left">
        <Auk::Toolbar::Item>
          <AuButton
            @skin="naked"
            {{on "click" @onCancel}}
            data-test-mandatee-panel-edit-cancel
          >
            {{t "cancel"}}
          </AuButton>
        </Auk::Toolbar::Item>
      </Auk::Toolbar::Group>
      <Auk::Toolbar::Group @position="right">
        <Auk::Toolbar::Item>
          <AuButton
            data-test-mandatee-panel-edit-save
            @skin="primary"
            @loading={{this.save.isRunning}}
            {{on "click" (perform this.save)}}
          >
            {{t "save"}}
          </AuButton>
        </Auk::Toolbar::Item>
      </Auk::Toolbar::Group>
    </Auk::Toolbar>
  </Auk::Panel::Footer>
</Auk::Panel>
{{#if this.showSelectMandateeModal}}
  <Mandatees::MandateesSelectorModalAlt
    @referenceDate={{@referenceDate}}
    @onClose={{this.closeSelectMandatee}}
    @onAdd={{this.addMandatee}}
    @buffer={{this.mandateesBuffer}}
  />
{{/if}}