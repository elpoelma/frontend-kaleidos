<div class="auk-u-mb-8">
  {{#if this.isEditing}}
    <Mandatees::MandateesPanel::MandateesPanelEdit
      @mandatees={{@mandatees}}
      @submitter={{@submitter}}
      @onCancel={{this.cancelEditing}}
      @onSave={{perform this.save}}
    />
  {{else}}
    <div class="auk-u-mb-3">
      <Mandatees::MandateesPanel::MandateesPanelView
        @mandatees={{@mandatees}}
        @submitter={{@submitter}}
        @showEditButton={{@allowEditing}}
        @onClickEdit={{this.startEditing}}
      />
    </div>
  {{/if}}
</div>