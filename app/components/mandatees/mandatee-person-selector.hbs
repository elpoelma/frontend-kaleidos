<div class="auk-form-group">
  <Auk::Label>
    {{t "ministers"}}
  </Auk::Label>
  {{#if this.mandateePersons}}
    {{#if @multiple}}
    <PowerSelectMultiple
      data-test-mandatee-person-selector
      @options={{this.mandateePersons}}
      @selected={{this.selectedMandateePersons}}
      @onChange={{this.onChange}}
      @searchEnabled={{true}}
      @search={{perform this.searchMandateePersons}}
      @noMatchesMessage={{t "no-ministers-found"}}
      @searchMessage={{t "no-ministers-found"}}
      @loadingMessage={{t "search-loading-text"}}
      as |person|
      >
        {{person.fullName}}
      </PowerSelectMultiple>
      {{else}}
      <PowerSelect
        data-test-mandatee-person-selector
        @options={{this.mandateePersons}}
        @selected={{this.selectedMandateePerson}}
        @onChange={{this.onChange}}
        @searchEnabled={{true}}
        @search={{perform this.searchMandateePersons}}
        @noMatchesMessage={{t "no-ministers-found"}}
        @searchMessage={{t "no-ministers-found"}}
        @loadingMessage={{t "search-loading-text"}}
        as |person|
      >
        {{person.fullName}}
      </PowerSelect>
      {{/if}}
    {{/if}}
</div>
