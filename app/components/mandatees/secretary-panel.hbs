<div class="auk-u-mb-8">
  {{#if this.isEditing}}
    <Mandatees::SecretaryPanel::Edit
      @referenceDate={{@referenceDate}}
      @onCancel={{this.cancelEditing}}
      @onSave={{perform this.save}}
      @secretary={{@secretary}}
    />
  {{else}}
    <div class="auk-u-mb-3">
      <Mandatees::SecretaryPanel::View
        @showEditButton={{@allowEditing}}
        @onClickEdit={{this.startEditing}}
        @secretary={{@secretary}}
      />
    </div>
  {{/if}}
</div>