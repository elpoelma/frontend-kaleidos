{{#if this.loadMinisters.isRunning}}
  <Auk::Loader />
{{else if this.ministers}}
<div class="auk-form-group">
  <Auk::CheckboxTree
    @label={{t "ministers"}}
    @layout="grid"
    @items={{this.ministers}}
    @itemStructure={{hash label="fullName"}}
    @selectedItems={{this.selectedMinisters}}
    @didUpdate={{this.onChangeMinisters}}
  />
 </div>
{{else}}
  <p>{{t "no-ministers-submitted-on-this-agenda"}}</p>
{{/if}}
