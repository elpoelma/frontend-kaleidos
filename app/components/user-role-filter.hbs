{{#if this.loadRoles.isRunning}}
  <Auk::Loader />
{{else}}
  <AuFieldset as |Fieldset|>
    <Fieldset.legend>{{t "filter-on-rights"}}</Fieldset.legend>
    <Fieldset.content>
      <AuCheckboxGroup
        @selected={{this.selected}}
        @onChange={{this.toggleRole}}
        as |Group|
      >
        {{#each this.roles as |role|}}
          <Group.Checkbox @value={{role}}>
            {{role.label}}
          </Group.Checkbox>
        {{/each}}
      </AuCheckboxGroup>
    </Fieldset.content>
  </AuFieldset>
{{/if}}