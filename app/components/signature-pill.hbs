{{#if this.isLoading}}
  <div class="auk-loader" role="alert" aria-busy="true"></div>
{{else}}
  {{#if @signatureMockupAlt}}
    <AuPill
      @icon="sign"
      @skin="success"
    >
      Getekend
    </AuPill>
  {{else if @signatureMockup}}  
    <AuPill
      @icon="sign"
      @skin="warning"
    >
      Verstuurd
    </AuPill>
  {{else}}
    {{#if (not this.isEditing)}}
      <AuPill
        @icon="sign"
        @skin="ongoing"
        @onClickAction={{this.openEditMode}}
        @actionIcon="remove"  
      >
        Te handtekenen
      </AuPill>
    {{else}}
      <AuPill
        @actionIcon="add"
        @skin="border"
        @onClickAction={{this.closeEditMode}}
      >
        Zet in handtekenmap
      </AuPill>
    {{/if}}
  {{/if}}
{{/if}}