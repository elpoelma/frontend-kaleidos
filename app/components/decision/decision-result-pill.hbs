{{#if (not @isEditable)}}
  <AuPill
    @skin={{this.skin}}
    @icon={{this.icon}}
    data-test-decision-result-pill
    data-test-agendaitem-decision
  >
    {{this.label}}
  </AuPill>
{{else}}
  <AuPill
    @skin={{this.skin}}
    @icon={{this.icon}}
    @onClickAction={{@onEdit}}
    @actionIcon="pencil"
    @actionText={{t "edit"}}
    data-test-decision-result-pill
    data-test-agendaitem-decision
  >
    {{this.label}}
  </AuPill>
{{/if}}