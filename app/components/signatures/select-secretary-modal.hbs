<Auk::Modal @size="medium">
  <Auk::Modal::Header
    @title={{t "to-sign-by"}}
    @onClose={{@onCancel}}
    @closeDisabled={{@loading}}
  />
  <Auk::Modal::Body>
    {{#if this.loadSecretaries.isRunning}}
      <Auk::Loader />
    {{else}}
      <AuFieldset as |Fieldset|>
        <Fieldset.content>
          <AuRadioGroup
            @alignment="default"
            @selected={{this.selectedSecretary}}
            @onChange={{this.onChangeSecretary}}
            as |Group|
          >
            {{#each this.secretaryOptions as |option|}}
            <Group.Radio
              @value={{option}}
              >
              {{option.fullDisplayName}}
            </Group.Radio>
            {{/each}}
          </AuRadioGroup>
        </Fieldset.content>
      </AuFieldset>
    {{/if}}
  </Auk::Modal::Body>
  <Auk::Modal::Footer @custom={{true}}>
    <Auk::Toolbar @size="large" as |Toolbar|>
      <Toolbar.Group @position="left" as |Group|>
        <Group.Item>
          <AuButton
            @skin="naked"
            @disabled={{@loading}}
            {{on "click" @onCancel}}
          >
            {{t "cancel"}}
          </AuButton>
        </Group.Item>
      </Toolbar.Group>
      <Toolbar.Group @position="right" as |Group|>
        <Group.Item>
          <AuButton
            @loading={{@loading}}
            {{on "click" this.saveSelected}}
          >
            {{t "apply"}}
          </AuButton>
        </Group.Item>
      </Toolbar.Group>
    </Auk::Toolbar>
  </Auk::Modal::Footer>
</Auk::Modal>
