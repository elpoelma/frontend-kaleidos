<div class="auk-u-m-8">
  {{#each @subcases as |subcase|}}
    <Subcases::SubcaseItem @subcase={{subcase}} as |subcase|>
      <div class="auk-hr">
        <hr/>
      </div>
      <div class="auk-u-mb-2">
        <p class="auk-overline">
          {{await subcase.case.type.label}}
        </p>
      </div>
      <div class="auk-u-mb-2">
        <div class="auk-h4">
          {{subcase.shortTitle}}
        </div>
      </div>
      <div class="auk-u-mb-4">
        <pre class="auk-u-text-pre-line">
          {{subcase.title}}
        </pre>
      </div>
    </Subcases::SubcaseItem>
  {{/each}}
</div>