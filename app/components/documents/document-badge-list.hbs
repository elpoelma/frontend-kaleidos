<Documents::DocumentList
  @pieces={{@pieces}}
as |documents|>
  <div class="grid-container">
    {{#each documents as |doc|}}
      <li class="vlc-document-list__item">
        <span>
          <a
            href={{doc.viewDocumentURL}} target="_blank" rel="noreferrer noopener"
            data-test-document-badge-link
          >
            <Auk::Icon @name='document-added' />
            {{doc.name}}
          </a>
          <AccessLevelPill
            @accessLevel={{await doc.accessLevel}}
          />
        </span>
      </li>
    {{/each}}
  </div>
</Documents::DocumentList>