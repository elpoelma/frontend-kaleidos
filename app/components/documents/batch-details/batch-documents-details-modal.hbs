<Auk::Modal @size="full-screen-padded">
  <Auk::Modal::Header @title={{t "documents"}} @onClose={{@onClose}} />
  <Auk::Modal::Body @noPadding={{true}}>
    <Utils::LoadableContent @isLoading={{this.isLoading}}>
      <table class="auk-table auk-table--styled auk-table--bordered">
        <thead>
          <tr>
            {{#if this.isEditingEnabled}}
              <th class="auk-table-checkbox-col">
                <Auk::Checkbox
                  @checked={{this.areAllSelected}}
                  {{on "input" this.toggleAllSelection}}
                />
              </th>
            {{/if}}
            <th>{{t "name-document"}}</th>
            <th>{{t "document-type"}}</th>
            {{#if this.isEditingEnabled}}
              <th>{{t "publicity"}}</th>
              <th class="auk-table-checkbox-col">{{t "confidential"}}</th>
            {{else}}
              <th>{{t "file-type"}}</th>
            {{/if}}
            <th>{{! Actions }}</th>
          </tr>
        </thead>
        <tbody>
          {{#each this.rows as |row|}}
            <Documents::BatchDetails::DocumentDetailsRow
              @row={{row}}
              @isEditingEnabled={{this.isEditingEnabled}}
              @isSelected={{includes row.piece this.selectedRows}}
              @onSelect={{this.toggleSelection}}
            />
          {{/each}}
        </tbody>
      </table>
    </Utils::LoadableContent>
  </Auk::Modal::Body>
  <Auk::Modal::Footer @onCancel={{@onClose}}>
    {{#if this.hasEditingPermission}}
      <Auk::Button
        @skin="primary"
        @disabled={{this.isSaveDisabled}}
        @loading={{this.save.isRunning}}
        {{on "click" (perform this.save)}}
      >
        {{t "save"}}
      </Auk::Button>
    {{/if}}
  </Auk::Modal::Footer>
</Auk::Modal>