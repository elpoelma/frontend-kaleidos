<Auk::Sidebar
  @size="xlarge"
  @position="right"
  @skin="white"
  class="auk-u-pb-6"
>
  <Auk::Navbar>
    <Auk::Toolbar>
      <Auk::Toolbar::Group @position="left">
        <Auk::Toolbar::Item>
          <Auk::Tabs>
            <Auk::Tab @onClick={{this.openDetails}} @active={{this.showDetails}}>{{t "detail"}}</Auk::Tab>
            <Auk::Tab @onClick={{this.openSignatures}} @active={{this.showSignatures}}>{{t "signatures"}}</Auk::Tab>
            <Auk::Tab @onClick={{this.openVersions}} @active={{this.showVersions}}>{{t "version"}}</Auk::Tab>
          </Auk::Tabs>
        </Auk::Toolbar::Item>
      </Auk::Toolbar::Group>
    </Auk::Toolbar>
  </Auk::Navbar>

  {{!-- DETAILS --}}
  {{#if this.showDetails}}
    <div class="auk-u-m-4">
      <Auk::KeyValue @key={{t "document-name"}} @value={{@piece.name}} />
      {{#unless this.loadData.isRunning}}
        {{#if this.documentType}}
          <Auk::KeyValue
            @key={{t "document-type"}}
            @value={{this.documentType.label}}
          />
        {{/if}}
        {{#if @piece.accessLevel}}
          <Auk::KeyValue @key={{t "publicity"}}>
            <Utils::AccessLevelColorBadge @accessLevel={{this.accessLevel}} />
          </Auk::KeyValue>
        {{/if}}
      {{/unless}}
      <Auk::KeyValue @key={{capitalize (t "confidentiality")}}>
        <Utils::ConfidentialityPill @confidential={{@piece.confidential}} />
      </Auk::KeyValue>
      <div class="auk-key-value-item">
        <Auk::KeyValue @key={{t "file-type"}}>
          <Utils::Documents::FileTypePill @extension={{@piece.file.extension}} />
        </Auk::KeyValue>
      </div>
    </div>

  {{!-- SIGNATURES --}}
  {{else if this.showSignatures}}
  test

  {{!-- VERSIONS --}}
  {{else if this.showVersions}}

  {{/if}}

  {{!-- FOOTER
  <div class="auk-u-mt-auto">
    <div class="auk-panel__footer">
      <Auk::Toolbar>
        <Auk::Toolbar::Group @position="right">
          <Auk::Toolbar::Item>
          </Auk::Toolbar::Item>
        </Auk::Toolbar::Group>
      </Auk::Toolbar>
    </div>
  </div>
  --}}
</Auk::Sidebar>