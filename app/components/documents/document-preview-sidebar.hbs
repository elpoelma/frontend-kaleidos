<Auk::Sidebar
  @size="xlarge"
  @position="right"
  @skin="white"
  class="auk-u-pb-6"
>
  <Auk::Navbar>
    <Auk::Toolbar>
      <Auk::Toolbar::Group @position="left">
        <Auk::Toolbar::Item>
          <Auk::Tabs>
            <Auk::Tab {{on "click" (fn this.setActiveTab "details")}} @active={{eq this.activeTab "details"}}>{{t "detail"}}</Auk::Tab>
            <Auk::Tab {{on "click" (fn this.setActiveTab "signatures")}} @active={{eq this.activeTab "signatures"}}>{{t "signatures"}}</Auk::Tab>
            <Auk::Tab {{on "click" (fn this.setActiveTab "versions")}} @active={{eq this.activeTab "versions"}}>{{t "version"}}</Auk::Tab>
          </Auk::Tabs>
        </Auk::Toolbar::Item>
      </Auk::Toolbar::Group>
    </Auk::Toolbar>
  </Auk::Navbar>

  {{!-- DETAILS --}}
  {{#if (eq this.activeTab "details")}}
    <div class="auk-u-m-4">
      <Auk::KeyValue @key={{t "document-name"}} @value={{@piece.name}} />
      {{#unless this.loadData.isRunning}}
        {{#if this.documentType}}
          <Auk::KeyValue
            @key={{t "document-type"}}
            @value={{this.documentType.label}}
          />
        {{/if}}
        {{#if @piece.accessLevel}}
          <Auk::KeyValue @key={{t "publicity"}}>
            <Utils::AccessLevelColorBadge @accessLevel={{this.accessLevel}} />
          </Auk::KeyValue>
        {{/if}}
      {{/unless}}
      <Auk::KeyValue @key={{capitalize (t "confidentiality")}}>
        <Utils::ConfidentialityPill @confidential={{@piece.confidential}} />
      </Auk::KeyValue>
      <div class="auk-key-value-item">
        <Auk::KeyValue @key={{t "file-type"}}>
          <Utils::Documents::FileTypePill @extension={{@piece.file.extension}} />
        </Auk::KeyValue>
      </div>
    </div>

  {{!-- SIGNATURES --}}
  {{else if (eq this.activeTab "signatures")}}

  {{!-- VERSIONS --}}
  {{else if (eq this.activeTab "versions")}}
    <div class="auk-u-m-4">
      {{#each this.versionPieces as |versionPiece|}}
        <Documents::VersionCard @onDeletePiece={{fn this.deleteVersion versionPiece}} @lastPiece={{this.lastPiece}} @piece={{versionPiece}} @currentPiece={{@piece}}/>
      {{/each}}
      <div class="auk-u-mt-4">
        <Auk::Button
                @skin="tertiary"
                @icon="add"
        >
          {{t "new-version"}}
        </Auk::Button>
      </div>
    </div>
  {{/if}}

  {{!-- FOOTER
  <div class="auk-u-mt-auto">
    <div class="auk-panel__footer">
      <Auk::Toolbar>
        <Auk::Toolbar::Group @position="right">
          <Auk::Toolbar::Item>
          </Auk::Toolbar::Item>
        </Auk::Toolbar::Group>
      </Auk::Toolbar>
    </div>
  </div>
  --}}
</Auk::Sidebar>

