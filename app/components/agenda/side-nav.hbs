<Auk::Navbar @skin="gray-200">
  <Auk::Toolbar>
    <Auk::Toolbar::Group @position="left" data-sidebar-expanded-only="">
      <h2 class="auk-toolbar-complex__title--small">{{t "nav-title"}}</h2>
    </Auk::Toolbar::Group>
    <Auk::Toolbar::Group @position={{if this.agendaMenuCollapsed "center" "right"}}>
      <Auk::Toolbar::Item class={{if this.agendaMenuCollapsed "auk-o-flex auk-o-flex--horizontal-center"}}>
        <Auk::Button
          @skin="borderless"
          @layout="icon-only"
          @icon="chevron-{{if this.agendaMenuCollapsed "right" "left"}}"
          {{action "collapseSideMenu"}}
        >
          {{t "toggle"}}
        </Auk::Button>
      </Auk::Toolbar::Item>
    </Auk::Toolbar::Group>
  </Auk::Toolbar>
</Auk::Navbar>
<ul class="auk-scroll-wrapper__body auk-scroll-wrapper__body--vertical">
  {{#each (await this.agendas) as |agenda|}}
    <li data-test-agenda-side-nav-agenda class="auk-sidebar__item auk-sidebar__item--styled {{active-class agenda this.currentAgenda class="auk-sidebar__item--active"}}">
      <a
        href="#"
        {{action "setCurrentAgenda" agenda}}
      >
        <div class="auk-sidebar__label">
          <span data-test-agenda-side-nav-agenda-name data-sidebar-expanded-only="">{{await agenda.agendaName}}</span>
          <span data-sidebar-collapsed-only="">
            {{#if (not agenda.isDesignAgenda)}}
              {{agenda.name}}
            {{else}}
              *
            {{/if}}
          </span>
        </div>
        <div class="auk-sidebar__sublabel" data-sidebar-expanded-only="">
          {{#if (not agenda.isDesignAgenda)}}
            {{t "approved-on"}}
          {{else}}
            {{t "latest-modified-on"}}
          {{/if}}
          <br/>
          {{moment-format agenda.modified "dd DD/MM/YYYY HH:mm"}}
        </div>
      </a>
    </li>
  {{/each}}
</ul>
