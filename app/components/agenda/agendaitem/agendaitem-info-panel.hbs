{{#if this.isEditing}}
  <Agenda::Agendaitem::AgendaitemInfoPanel::AgendaitemInfoPanelEdit
    @agendaitem={{@agendaitem}}
    @subcase={{@subcase}}
    @newsItem={{@newsItem}}
    @onCancel={{this.cancelEditing}}
    @onSave={{this.stopEditing}}
  />
{{else}}
  <Agenda::Agendaitem::AgendaitemInfoPanel::AgendaitemInfoPanelView
    @agendaitem={{@agendaitem}}
    @subcase={{@subcase}}
    @agenda={{@agenda}}
    @newsItem={{@newsItem}}
    @onClickEdit={{this.startEditing}}
    @allowEditing={{@allowEditing}}
  />
{{/if}}