<div class="auk-u-mb-8">
  <Auk::Panel>
    <Auk::Panel::Header>
      <Auk::Toolbar as |Toolbar|>
        <Toolbar.Group @position="left" as |Group|>
          <Group.Item>
            <h4 class="auk-panel__title">
              {{#if (not @agendaitem.showAsRemark)}}
                {{t "note"}}
              {{else}}
                {{t "text"}}
              {{/if}}
            </h4>
          </Group.Item>
        </Toolbar.Group>
        <Toolbar.Group @position="right" as |Group|>
          {{!-- TODO: for now the link-button is hidden while loading.
          A disabled state would be better to avoid flashing a new button in view once loaded. --}}
          {{#if (and @subcase this.loadCase.isIdle)}}
            <Group.Item>
              <Auk::Button
                @skin="borderless"
                @layout="icon-right"
                @icon="chevron-right"
                @route="cases.case.subcases.subcase.overview"
                @models={{array this.case.id @subcase.id}}
                data-test-agendaitem-titles-link-to-subcase={{true}}
              >
                {{t "to-subcase"}}
              </Auk::Button>
            </Group.Item>
          {{/if}}
          {{#if @allowEditing}}
            <Group.Item>
              <Auk::Button
                data-test-agendaitem-titles-edit
                @skin="tertiary"
                @icon="pencil"
                @layout="icon-only"
                {{on "click" @onClickEdit}}
              />
            </Group.Item>
          {{/if}}
        </Toolbar.Group>
      </Auk::Toolbar>
    </Auk::Panel::Header>
    <Auk::Panel::Body>
      <div class="auk-content">
        <h4 data-test-agendaitem-titles-short-title>
          {{@agendaitem.shortTitle}}
        </h4>
        {{#if @agendaitem.title}}
          <div class="auk-u-mb-2">
            <span data-test-agendaitem-titles-title class="auk-o-flex--inline auk-u-text-pre-line">
              {{@agendaitem.title}}
            </span>
          </div>
        {{/if}}
        <Auk::PillList>
          {{#if (not @agendaitem.showAsRemark) }}
            {{#if @subcase.subcaseName}}
              <Auk::Pill>
                {{capitalize @subcase.subcaseName}}
              </Auk::Pill>
            {{/if}}
            {{#if @agendaitem.retracted}}
              <Auk::Pill>
                {{t "postponed-item"}}
              </Auk::Pill>
            {{/if}}
          {{else}}
            {{#if @newsletterInfo}}
              {{#if @newsletterInfo.inNewsletter}}
                <Auk::Pill @skin="success" @icon="visible">
                  {{t "visible-in-newsletter"}}
                </Auk::Pill>
              {{else}}
                <Auk::Pill @skin="danger" @icon="not-visible">
                  {{t "hidden-in-newsletter"}}
                </Auk::Pill>
              {{/if}}
            {{else}}
              <Auk::Pill>
                {{t "no-newsletter-info"}}
              </Auk::Pill>
            {{/if}}
          {{/if}}
          {{#if
            (and @agendaitem.isDesignAgenda
                    (and @allowEditing @agendaitem.formallyOkToShow))
          }}
            <Auk::Pill
              @skin={{@agendaitem.formallyOkToShow.svg.color}}
              @icon={{@agendaitem.formallyOkToShow.svg.icon}}
            >
              {{@agendaitem.formallyOkToShow.label}}
            </Auk::Pill>
          {{/if}}
        </Auk::PillList>
      </div>
    </Auk::Panel::Body>
    {{#if @agendaitem.comment}}
      <Auk::Panel::Footer class="auk-u-maximize-height">
        <Auk::Toolbar as |Toolbar|>
          <Toolbar.Group @position="left" as |Group|>
            <Group.Item>
              <pre class="auk-u-text-pre-line" data-test-agendaitem-titles-comment>
                <strong class="auk-u-text-bold">
                  {{t "comment-title"}}:
                </strong>
                {{@agendaitem.comment}}
              </pre>
            </Group.Item>
          </Toolbar.Group>
        </Auk::Toolbar>
      </Auk::Panel::Footer>
    {{/if}}
    {{#if @agendaitem.privateComment}}
      <Auk::Panel::Footer class="auk-u-maximize-height auk-u-bg-alt">
        <Auk::Toolbar as |Toolbar|>
          <Toolbar.Group @position="left" as |Group|>
            <Group.Item>
              <pre class="auk-u-text-pre-line auk-u-text-muted" data-test-agendaitem-titles-private-comment>
                <strong class="auk-u-text-bold">
                  <Auk::Icon @name="lock-closed" @size="small" />
                  {{t "private-comment-title"}}:
                </strong>
                {{@agendaitem.privateComment}}
              </pre>
            </Group.Item>
          </Toolbar.Group>
        </Auk::Toolbar>
      </Auk::Panel::Footer>
    {{/if}}
  </Auk::Panel>
</div>
