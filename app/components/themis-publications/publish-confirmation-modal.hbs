<Auk::Modal @size="small">
  <Auk::Modal::Header
    @title={{or @title (t "publish-publication-modal-title")}}
    @onClose={{@onCancel}}
    @closeDisabled={{this.confirmPublish.isRunning}}
  />
  <Auk::Modal::Body>
    {{this.confirmationMessage}}
  </Auk::Modal::Body>
  <Auk::Modal::Footer
    @onCancel={{@onCancel}}
    @cancelDisabled={{this.confirmPublish.isRunning}}
  >
    <AuButton
      @skin="primary"
      @loading={{this.confirmPublish.isRunning}}
      {{on "click" (perform this.confirmPublish)}}
    >
      {{t "publish-to-public"}}
    </AuButton>
  </Auk::Modal::Footer>
</Auk::Modal>