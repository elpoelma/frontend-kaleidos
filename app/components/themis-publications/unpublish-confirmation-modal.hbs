<Auk::Modal @size="small">
  <Auk::Modal::Header
    @title={{t "unpublish-publication-modal-title"}}
    @onClose={{@onCancel}}
  />
  <Auk::Modal::Body>
    {{#if @newsletter}}
    <p>{{@newsletter}}</p>
    {{else}}
    <p>Bent u zeker dat u de publicatie van de documenten wil terugtrekken?</p>
    {{/if}}
  </Auk::Modal::Body>
  <Auk::Modal::Footer @onCancel={{@onCancel}}>
    <Auk::Button
      @skin="primary"
      @loading={{this.confirmUnpublish.isRunning}}
      {{on "click" (perform this.confirmUnpublish)}}
    >
      {{t "retract-from-public"}}
    </Auk::Button>
  </Auk::Modal::Footer>
</Auk::Modal>
