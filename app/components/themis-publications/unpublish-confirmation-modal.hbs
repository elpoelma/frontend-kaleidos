<Auk::Modal @size="small">
  <Auk::Modal::Header
    @title={{t "unpublish-publication-modal-title"}}
    @onClose={{@onCancel}}
    @closeDisabled={{this.confirmUnpublish.isRunning}}
  />
  <Auk::Modal::Body>
    <AuFieldset as |Fieldset|>
      <Fieldset.legend>{{t "unpublish-publication-scope-selection"}}</Fieldset.legend>
      <Fieldset.content>
        <AuRadioGroup
          @selected={{this.selectedOption}}
          @onChange={{this.onChangeOption}}
          as |Group|
        >
          {{#each this.options as |option|}}
            <Group.Radio
              @value={{option}}
            >
              {{option.label}}
            </Group.Radio>
          {{/each}}
        </AuRadioGroup>
      </Fieldset.content>
    </AuFieldset>
  </Auk::Modal::Body>
  <Auk::Modal::Footer @onCancel={{@onCancel}}>
    <AuButton
      @skin="primary"
      @loading={{this.confirmUnpublish.isRunning}}
      {{on "click" (perform this.confirmUnpublish)}}
    >
      {{t "retract-from-public"}}
    </AuButton>
  </Auk::Modal::Footer>
</Auk::Modal>
