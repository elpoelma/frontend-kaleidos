<div class="vl-uploaded-document__title">
  <div class="vl-badge vl-badge--icon vl-badge--small-medium vl-badge--alt">
    <i class="vl-badge__icon ki-document" aria-hidden="true"></i>
  </div>
  <div class="vl-uploaded-document__title-container">
    <div class="title">
      <h6 class="auk-h4"
        data-test-vl-uploaded-document-filename>
        {{name}}
      </h6>
      {{#if view}}
        <button type="button" class="auk-button auk-button--borderless vl-button--icon"
          {{action "view"}}
        >
          <div class="auk-icon auk-icon--default">
            <i class="ki ki-book"></i>
          </div>
          <div class="auk-u-sr-only">
            {{t "show-piece"}}
          </div>
        </button>
      {{/if}}
      {{#if download}}
        <button type="button" class="vl-button vl-button--^link vl-button--icon"
          {{action "download"}}
        >
          <i class="ki-download vl-button__icon"
             aria-hidden="true"
          ></i>
          <div class="auk-u-sr-only">
            {{t "download"}}
          </div>
        </button>
      {{else if downloadLink}}
        <a class="auk-button auk-button--borderless vl-button--icon"
           href={{downloadLink}}
           download={{if downloadName downloadName name}}
        >
          <i class="ki-download vl-button__icon"
             aria-hidden="true"
          ></i>
          <div class="auk-u-sr-only">
            {{t "download"}}
          </div>
        </a>
      {{/if}}
      {{#if delete}}
        <button type="button"
                data-test-vl-uploaded-document-deletepiece
                class="auk-button auk-button--borderless vl-button--icon"
          {{action "delete"}}
        >
          <div class="auk-icon auk-icon--default">
            <i class="ki ki-delete"></i>
          </div>
          <div class="auk-u-sr-only">
            {{t "delete"}}
          </div>
        </button>
      {{/if}}
    </div>
    <div class="vl-document__metadata metadata">
      {{extension}}
      -
      {{format-bytesize size}}
    </div>
  </div>
</div>
{{yield}}
