<div class="auk-o-flex auk-o-flex--vertical-center">
  {{#if this.isLoading}}
    <div class="auk-loader" role="alert" aria-busy="true"></div>
  {{else}}
    {{#if (not @confidential)}}
      {{#if (not this.isEditing)}}
        <span
          class={{this.pillClass}}
          data-test-access-level-pill
          {{on "click" this.toggleEdit}}
        >
          {{this.accessLevelLabel}}
        </span>
      {{else}}
        <div style="width:75%">
          <Utils::ModelSelector
            data-test-model-selector
            @modelName="access-level"
            @allowClear={{true}}
            @hideSearch={{true}}
            @propertyToShow="label"
            @sortField="priority"
            @selectedItems={{@accessLevel}}
            @selectModel={{this.changeAccessLevel}} />
        </div>
        <button
          type="button"
          class="auk-button auk-button--borderless auk-button--icon"
          data-test-access-level-save
          {{on "click" (perform this.confirmChangeAccessLevel @accessLevel)}}
        >
          <span class="auk-button__content">
            <div class="auk-icon auk-icon--default">
              <i class="ki ki-check"></i>
            </div>
            <div class="auk-u-sr-only">
              {{t "more-options"}}
            </div>
          </span>
        </button>
        <button
          type="button"
          class="auk-button auk-button--borderless auk-button--icon"
          {{on "click" (perform this.cancelChangeAccessLevel)}}
        >
          <span class="auk-button__content">
            <div class="auk-icon auk-icon--default">
              <i class="ki ki-cross"></i>
            </div>
            <div class="auk-u-sr-only">
              {{t "more-options"}}
            </div>
          </span>
        </button>
      {{/if}}
    {{/if}}
    <button
      type="button"
      class="auk-button auk-button--muted-borderless auk-button--icon auk-toolbar-complex__item"
      disabled={{not this.session.isEditor}}
      {{on "click" (perform this.changeConfidentiality)}}
    >
      <span class="auk-button__content">
        {{#if @confidential}}
          <EmberTooltip @side="top" @tooltipClass="tooltip-custom">
            <p>
              {{t "document-is-confidential"}}
            </p>
          </EmberTooltip>
          <WebComponents::AuIcon @name="lock-closed" @iconSkinColor="danger" />
        {{else}}
          <WebComponents::AuIcon @name="lock-open" />
        {{/if}}
      </span>
    </button>
  {{/if}}
</div>