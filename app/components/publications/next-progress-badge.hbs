{{#unless this.loadData.isRunning}}
  {{#if @translationSubcase.endDate}}
    <Auk::StatusPill data-test-translation-statuspill-done @status="done" class="auk-next-step">
      Gepubliceerd
    </Auk::StatusPill>
  {{else}}
    {{#if (gt this.requests.length 0)}}
      <Auk::StatusPill data-test-translation-statuspill-in-progress class="auk-next-step">
        Nalezen
      </Auk::StatusPill>
    {{else}}
      <Auk::StatusPill
        data-test-translation-statuspill-not-started
        @status="not-started" class="auk-next-step"
      >
        Te vertalen
      </Auk::StatusPill>
    {{/if}}
  {{/if}}
{{/unless}}
