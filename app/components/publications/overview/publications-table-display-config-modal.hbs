<div class="auk-popover__header">
  <Auk::Toolbar>
    <Auk::Toolbar::Group @position="left">
      <Auk::Toolbar::Item>
        <h4 class="auk-toolbar__title">
          {{t "publications-setting-show-columns-modal-title"}}
        </h4>
      </Auk::Toolbar::Item>
    </Auk::Toolbar::Group>
    <Auk::Toolbar::Group @position="right">
      <Auk::Toolbar::Item>
        <AuButton
          data-test-publications-table-display-config-close
          @skin="naked"
          @icon="x"
          @hideText={{true}}
          disabled={{@closeDisabled}}
          {{on "click" @onClose}}
        >
          {{t "close"}}
        </AuButton>
      </Auk::Toolbar::Item>
    </Auk::Toolbar::Group>
  </Auk::Toolbar>
</div>
<div class="auk-popover__body">
  {{#each this.optionColumns as |column|}}
    {{#each column as |option|}}
      <div>
        <AuControlCheckbox
          data-test-overview-table-display-config-option-checkbox={{option.keyName}}
          @checked={{includes option @tableConfig.visibleColumns}}
          @onChange={{fn this.toggleColumnVisibility option.keyName}}
        >
          <span>
            {{t option.translationKey}}
            {{#if
              (not-eq
                (t option.translationKey) (t option.translationKeySmall)
              )
            }}
              <span class="auk-u-text-size--small auk-u-text-muted">
                ({{t option.translationKeySmall}})
              </span>
            {{/if}}
          </span>
        </AuControlCheckbox>
      </div>
    {{/each}}
  {{/each}}
  <AuButton
    class="auk-u-mt-2"
    @skin="link-secondary"
    {{on "click" this.reset}}
  >
    {{t "reset-display"}}
  </AuButton>
</div>