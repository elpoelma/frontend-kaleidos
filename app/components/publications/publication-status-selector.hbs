<div class="auk-form-group">
  <WebComponents::AuLabel for="blockInput">{{t 'status'}}</WebComponents::AuLabel>
  <PowerSelect
          @options={{this.publicationStatusses}}
          @searchEnabled={{false}}
          @selected={{@publicationStatus}}
          @onchange={{@onChange}} as |status|>
    {{#if status.isPending }}
      <Auk::Icon @name="clock" @iconSkinColor="warning" />
    {{else if status.isPublished }}
      <Auk::Icon @name="circle-check" @iconSkinColor="success" />
    {{else if status.isPaused}}
      <Auk::Icon @name="circle-pause" @iconSkinColor="muted" />
    {{else if status.isWithdrawn }}
      <Auk::Icon @name="circle-error" @iconSkinColor="danger" />
    {{/if}}
    {{status.label}}
  </PowerSelect>
</div>