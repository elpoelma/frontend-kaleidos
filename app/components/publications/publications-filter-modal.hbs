<Auk::Modal @size="medium">
  <Auk::Modal::Header @title={{t "filter-content"}} @onClose={{@onCancel}} />
  <Auk::Modal::Body>
    <div class="auk-form-group-layout auk-form-group-layout--grid">
      <div class="auk-o-grid">
        <div class="auk-o-grid-col-4">
          <div class="auk-form-group">
            <Auk::Label for="defaultInput">{{t "source"}}</Auk::Label>
          </div>
          <div class="auk-form-group">
            <Auk::Label for="defaultInput">{{t "status"}}</Auk::Label>
          </div>
        </div>
        <div class="auk-o-grid-col-4">
          <div class="auk-form-group">
            <Auk::CheckboxList>
              <Auk::Checkbox
                data-test-publications-filter-minister
                @label={{t "via-cabinet"}}
                @checked={{this.filter.ministerFilterOption}}
                {{on
                  "input"
                  (fn this.toggleFilterOption "ministerFilterOption")
                }}
              />
            </Auk::CheckboxList>
          </div>
          <div class="auk-form-group">
            <Auk::CheckboxList>
              <Auk::Checkbox
                data-test-publications-filter-published
                @label={{t "publications-published"}}
                @checked={{this.filter.publishedFilterOption}}
                {{on
                  "input"
                  (fn this.toggleFilterOption "publishedFilterOption")
                }}
              />
              <Auk::Checkbox
                data-test-publications-filter-paused
                @label={{t "publications-paused"}}
                @checked={{this.filter.pausedFilterOption}}
                {{on "input" (fn this.toggleFilterOption "pausedFilterOption")}}
              />
            </Auk::CheckboxList>
          </div>
        </div>
        <div class="auk-o-grid-col-4">
          <div class="auk-form-group">
            <Auk::CheckboxList>
              <Auk::Checkbox
                data-test-publications-filter-not-minister
                @label={{t "not-via-cabinet"}}
                @checked={{this.filter.notMinisterFilterOption}}
                {{on
                  "input"
                  (fn this.toggleFilterOption "notMinisterFilterOption")
                }}
              />
            </Auk::CheckboxList>
          </div>
          <div class="auk-form-group">
            <Auk::CheckboxList>
              <Auk::Checkbox
                data-test-publications-filter-to-publish
                @label={{t "publications-to-publish"}}
                @checked={{this.filter.toPublishFilterOption}}
                {{on
                  "input"
                  (fn this.toggleFilterOption "toPublishFilterOption")
                }}
              />
              <Auk::Checkbox
                data-test-publications-filter-withdrawn
                @label={{t "discharged"}}
                @checked={{this.filter.withdrawnFilterOption}}
                {{on
                  "input"
                  (fn this.toggleFilterOption "withdrawnFilterOption")
                }}
              />
            </Auk::CheckboxList>
          </div>
        </div>
      </div>
    </div>
  </Auk::Modal::Body>
  {{! TODO, use the template, yield the buttons in the right toolbar}}
  <Auk::Modal::Footer @custom={{true}}>
    <Auk::Toolbar @size="large">
      <Auk::Toolbar::Group @position="left">
        <Auk::Toolbar::Item>
          <Auk::ButtonLink
            data-test-publications-filter-cancel
            {{on "click" @onCancel}}
          >
            {{t "cancel"}}
          </Auk::ButtonLink>
        </Auk::Toolbar::Item>
      </Auk::Toolbar::Group>
      <Auk::Toolbar::Group @position="right">
        <Auk::Toolbar::Item>
          <Auk::Button
            @skin="secondary"
            data-test-publications-filter-reset
            {{on "click" this.reset}}
          >
            {{t "clear-filter-plural"}}
          </Auk::Button>
        </Auk::Toolbar::Item>
        <Auk::Toolbar::Item>
          <Auk::Button
            @icon="filter"
            @skin="primary"
            data-test-publications-filter-save
            {{on "click" (fn @onSave this.filter)}}
          >
            {{t "filter-content"}}
          </Auk::Button>
        </Auk::Toolbar::Item>
      </Auk::Toolbar::Group>
    </Auk::Toolbar>
  </Auk::Modal::Footer>
</Auk::Modal>