<Auk::Modal>
  <Auk::Modal::Header
    @title="Publicatieaanvraag"
    @onClose={{perform this.cancel}} />
  <Auk::Modal::Body>
    <Utils::LoadableContent>
      <div class="auk-form-group-layout auk-form-group-layout--standard">
        <div class="auk-form-group">
          <Auk::Label for="publicationRequestModal.subject">{{t "subject"}}</Auk::Label>
          <Auk::Input id="publicationRequestModal.subject" @block={{true}}
            @value={{this.subject}} />
        </div>
        <div class="auk-form-group">
          <Auk::Label for="publicationRequestModal.message">{{t "message"}}</Auk::Label>
          <Auk::Textarea id="publicationRequestModal.message" @block={{true}}
            @value={{this.message}}
          />
        </div>
        <div class="auk-form-group">
          <Auk::Label for="publicationRequestModal.attachments">{{t "attachments"}}</Auk::Label>
          <Auk::FileUploader
            id="publicationRequestModal.attachments"
            @multiple={{true}}
            @onUpload={{this.didUpload}}
          />
          {{!TODO decent display of uploaded files}}
          {{#each this.files as |file|}}
            <div>
              {{file.name}}
            </div>
          {{/each}}
        </div>
      </div>
    </Utils::LoadableContent>
  </Auk::Modal::Body>
  <Auk::Modal::Footer @onCancel={{perform this.cancel}}>
    <Auk::Button
      @skin="primary"
      {{on "click" (perform this.save)}}
    >
      {{t "request-action"}}
    </Auk::Button>
  </Auk::Modal::Footer>
</Auk::Modal>