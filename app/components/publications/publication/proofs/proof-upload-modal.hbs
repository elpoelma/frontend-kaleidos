<Auk::Modal>
  <Auk::Modal::Header
    @title={{t
      (if
        @isCorrectionDocument
        "upload-corrected-proof-for-publication-x-identification"
        "upload-proof-for-publication-x-identification")
      identification=@publicationFlow.identification.idName
    }}
    @onClose={{perform this.cancel}} />
  <Auk::Modal::Body>
    <Utils::LoadableContent @isLoading={{this.isLoading}} @reserveSpace={{true}}>

      <Auk::FileUploader
        @onUpload={{this.onUploadFile}} />
      {{!-- File details --}}
      {{#if this.file}}
        <div class="auk-u-my-4">
          <div class="auk-o-grid">
            <div class="auk-o-grid-col-11">
              <div class="auk-form-group-layout auk-form-group-layout--horizontal">
                <div class="auk-form-group {{this.validators.name.errorClass}}">
                  <Auk::Label for="proofUploadName" @required={{true}}>
                    {{t "name"}}
                  </Auk::Label>
                  <Auk::Input type="text" id="proofUploadName"
                    @value={{mut this.name}}
                    {{on "input" this.validators.name.enableError}} />
                </div>
                <div class="auk-form-group">
                  <Auk::Label>{{t "file-type"}}</Auk::Label>
                  <Utils::Documents::FileTypePill @extension={{this.file.extension}} />
                </div>
                {{#if @isReceivedDocument}}
                  <div class="auk-form-group {{this.validators.receivedAtDate.errorClass}}">
                    <Auk::Label for="proofUploadReceivedAtDate">{{t "received-at"}}</Auk::Label>
                    <Auk::Datepicker id="proofUploadReceivedAtDate"
                      @date={{this.receivedAtDate}}
                      @onChange={{this.setReceivedAtDate}} />
                  </div>
                {{/if}}
                {{#if @isCorrectionDocument}}
                  <div class="auk-form-group">
                    <Auk::Label for="proofUploadIsCorrected">{{t "corrected"}}</Auk::Label>
                    <Auk::Checkbox id="proofUploadIsCorrected"
                      @checked={{true}}
                      @disabled={{true}} />
                  </div>
                {{/if}}
              </div>
            </div>
          </div>
        </div>
      {{/if}}

    </Utils::LoadableContent>
  </Auk::Modal::Body>
  <Auk::Modal::Footer @custom={{true}} @size="large">
    <Auk::Toolbar>
      <Auk::Toolbar::Group @position="left">
        <Auk::Toolbar::Item>
          <Auk::Button @skin="borderless"
            @disabled={{this.isCancelDisabled}}
            {{on "click" (perform this.cancel)}}>
            {{t "cancel"}}
          </Auk::Button>
        </Auk::Toolbar::Item>
      </Auk::Toolbar::Group>
      <Auk::Toolbar::Group @position="right">
        <Auk::Toolbar::Item>
          <Auk::Button
            @skin="primary"
            @disabled={{this.isSaveDisabled}}
            @loading={{this.save.isRunning}}
            {{on "click" (perform this.save)}}>
            {{t "save"}}
          </Auk::Button>
        </Auk::Toolbar::Item>
      </Auk::Toolbar::Group>
    </Auk::Toolbar>
  </Auk::Modal::Footer>
</Auk::Modal>