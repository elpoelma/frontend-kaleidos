<Auk::Modal>
  <Auk::Modal::Header
    @onClose={{perform this.cancelUpload}}
    @title={{t
      "upload-document-for-publication"
      identifier=@publicationFlow.identification.idName
    }} />
  <Auk::Modal::Body>
    <div class="auk-u-p-4">
      <Auk::FileUploader
        @fileQueueName={{this.fileQueueName}}
        @multiple={{false}}
        @onUpload={{this.upload}} />

      {{#if this.piece}}

      {{/if}}
    </div>
  </Auk::Modal::Body>
</Auk::Modal>