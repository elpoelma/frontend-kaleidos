<Auk::Modal
  @size="small"
  data-test-add-mandateemodal>
  <Auk::Modal::Header
    @title={{t "add-mandatee"}}
    @onClose={{@onClose}} />
  <Auk::Modal::Body>
    <Utils::LoadableContent
      @isLoading={{this.isLoading}} @reserveSpace={{true}}>
      <Auk::Label>{{t "mandatee"}}</Auk::Label>
      <PowerSelect
        @options={{this.options}}
        @selected={{this.selection}}
        @noMatchesMessage={{t "no-mandatees-found"}}
        @placeholder={{t "select-mandatee"}}
        @search={{this.search}}
        @onchange={{this.select}}
        data-test-mandatee-selector
        as |mandatee|>
        <Auk::Avatar @size="small" @icon="user">
          {{mandatee.person.fullName}}
        </Auk::Avatar>
      </PowerSelect>
    </Utils::LoadableContent>
  </Auk::Modal::Body>
  <Auk::Modal::Footer @custom={{true}}>
    <WebComponents::AuToolbar>
      <WebComponents::AuToolbar::Group @position="left">
        <WebComponents::AuToolbar::Item>
          <Auk::Button @skin="borderless" {{on "click" @onClose}}
            @disabled={{this.onLink.isRunning}}>
            {{t "cancel"}}
          </Auk::Button>
        </WebComponents::AuToolbar::Item>
      </WebComponents::AuToolbar::Group>
      <WebComponents::AuToolbar::Group @position="right">
        <WebComponents::AuToolbar::Item>
          <Auk::Button
            @skin="primary"
            @icon="add"
            @size="small"
            @disabled={{or this.init.isRunning (not this.canLink)}}
            @loading={{this.onLink.isRunning}}
            {{on "click" (perform this.onLink)}}
            data-test-add-contactperson-submit-button>
            {{t "add"}}
          </Auk::Button>
        </WebComponents::AuToolbar::Item>
      </WebComponents::AuToolbar::Group>
    </WebComponents::AuToolbar>
  </Auk::Modal::Footer>
</Auk::Modal>
