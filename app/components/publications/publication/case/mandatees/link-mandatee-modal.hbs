<Auk::Modal @size="small">
  <Auk::Modal::Header @title={{t "add-mandatee"}} @onClose={{@onClose}} />
  <Auk::Modal::Body>
    <Utils::LoadableContent
      @isLoading={{this.onLink.isRunning}}
      @reserveSpace={{true}}
    >
      <Auk::Label>{{t "mandatee"}}</Auk::Label>
      <Utils::MandateeSelector
        data-test-link-mandatees-select
        @chooseMandatee={{fn (mut this.selection)}}
        @singleSelect={{true}}
        @selectedMandatees={{this.selection}}
      />
    </Utils::LoadableContent>
  </Auk::Modal::Body>
  <Auk::Modal::Footer @custom={{true}}>
    <Auk::Toolbar @size="large">
      <Auk::Toolbar::Group @position="left">
        <Auk::Toolbar::Item>
          <Auk::ButtonLink
            data-test-link-mandatees-cancel
            {{on "click" @onClose}}
            @disabled={{this.onLink.isRunning}}
          >
            {{t "cancel"}}
          </Auk::ButtonLink>
        </Auk::Toolbar::Item>
      </Auk::Toolbar::Group>
      <Auk::Toolbar::Group @position="right">
        <Auk::Toolbar::Item>
          <Auk::Button
            data-test-link-mandatees-add
            @skin="primary"
            @icon="add"
            @size="small"
            @disabled={{not this.canLink}}
            @loading={{this.onLink.isRunning}}
            {{on "click" (perform this.onLink)}}
          >
            {{t "add"}}
          </Auk::Button>
        </Auk::Toolbar::Item>
      </Auk::Toolbar::Group>
    </Auk::Toolbar>
  </Auk::Modal::Footer>
</Auk::Modal>