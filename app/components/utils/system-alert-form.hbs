<div class="auk-form-group">
  <div class="auk-o-flex--align-end auk-u-mb-2">
    <div
      data-test-system-alert-form-from-date
      class="auk-form-group"
    >
      <Auk::Label>{{t "start-date"}}</Auk::Label>
      <WebComponents::VlDatepicker
        @date={{array (moment-format this.alert.beginDate "YYYY-MM-DDTHH:mm:ssZ")}}
        @dateChanged={{action "selectBeginDate"}}
        @enableTime={{true}}
      />
    </div>
    <div
      data-test-system-alert-form-to-date
      class="auk-form-group auk-u-mb-3"
    >
      <Auk::Label>{{t "end-date"}}</Auk::Label>
      <WebComponents::VlDatepicker
        @date={{array (moment-format this.alert.endDate "YYYY-MM-DDTHH:mm:ssZ")}}
        @dateChanged={{action "selectEndDate"}}
        @enableTime={{true}}
      />
    </div>
  </div>
  <div
    data-test-system-alert-form-title
    class="auk-form-group"
  >
    <Auk::Label>{{t "title"}}</Auk::Label>
    <WebComponents::VlFormInput @value={{this.alert.title}} />
  </div>
  <div
    data-test-system-alert-form-message
    class="auk-form-group"
  >
    <Auk::Label>{{t "system-message"}}</Auk::Label>
    <Textarea @rows="2" class="auk-textarea" @value={{this.alert.message}} />
  </div>
  <div class="auk-form-group">
    <Auk::Label>{{t "severity"}}</Auk::Label>
    <Utils::ModelSelector
      @modelName="alert-type"
      @searchField="label"
      @propertyToShow="label"
      @sortField="label"
      @selectedItems={{this.alert.type}}
      @selectModel={{action "selectType"}}
    />
  </div>
</div>