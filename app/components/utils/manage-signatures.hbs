{{#if (not isAdding)}}
  <div class="auk-modal__content">
    {{utils/model-selector
      modelName="signature"
      searchField="name"
      propertyToShow="name"
      sortField="name"
      selectedItems=(await selectedSignature)
      selectModel=(action "selectSignature")
    }}
    <div class="auk-u-mb-3"/>
    <div>
      {{t "signature-default"}}
      {{await defaultSignature.name}}
    </div>
  </div>
  {{#if isEditing}}
    {{utils/edit-signature
      signatureToEdit=(await selectedSignature)
      closeModal=(action "toggleIsEditing")
    }}
  {{else}}
    <div class="vlc-navbar vlc-navbar--white vlc-navbar--bordered-top">
      <div class="vlc-toolbar">
        <div class="vlc-toolbar__left">
          <div class="vlc-toolbar__item">
            <button type="button" class="auk-button auk-button--borderless"
              {{action "closeModal"}}
            >
              {{t "cancel"}}
            </button>
          </div>
        </div>
        <div class="vlc-toolbar__right">
          <div class="vlc-toolbar__item">
            {{#if selectedSignature}}
              <button type="button" class="auk-button auk-button--tertiary"
                {{action "setDefaultSignature"}}
              >
                <div class="auk-icon auk-icon--default">
                  <i class="ki ki-pencil"></i>
                </div>
                <div class="auk-button__label">
                  {{t "signature-set-default"}}
                </div>
              </button>
              <button type="button" class="auk-button auk-button--tertiary"
                {{action "toggleIsEditing"}}
              >
                <div class="auk-icon auk-icon--default">
                  <i class="ki ki-pencil"></i>
                </div>
                <div class="auk-button__label">
                  {{t "signature-edit"}}
                </div>
              </button>
            {{/if}}
            <button type="button" class="auk-button auk-button--tertiary"
              {{action "toggleIsAdding"}}
            >
              <div class="auk-icon auk-icon--default">
                <i class="ki ki-add"></i>
              </div>
              <div class="auk-button__label">
                {{t "signature-add"}}
              </div>
            </button>
          </div>
        </div>
      </div>
    </div>
  {{/if}}
{{else}}
  {{utils/create-signature closeModal=(action "toggleIsAdding")}}
{{/if}}
