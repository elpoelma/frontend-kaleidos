{{#if (not isAdding)}}
  <div class="auk-modal__body">
    <div class="auk-u-p-4">
      {{utils/model-selector
        modelName="signature"
        searchField="name"
        propertyToShow="name"
        sortField="name"
        selectedItems=(await selectedSignature)
        selectModel=(action "selectSignature")
      }}
      <div class="auk-u-mb-3"/>
      <div>
        {{t "signature-default"}}
        {{await defaultSignature.name}}
      </div>
    </div>
  </div>
  {{#if isEditing}}
    {{utils/edit-signature
      signatureToEdit=(await selectedSignature)
      closeModal=(action "toggleIsEditing")
    }}
  {{else}}
    <div class="auk-modal__footer auk-modal__footer--bordered">
      <div class="auk-toolbar-complex">
        <div class="auk-toolbar-complex__left">
          <div class="auk-toolbar-complex__item">
            <Auk::Button
              @skin="borderless"
              {{action "closeModal"}}
            >
              {{t "cancel"}}
            </Auk::Button>
          </div>
        </div>
        <div class="auk-toolbar-complex__right">
          <div class="auk-toolbar-complex__item">
            {{#if selectedSignature}}
              <Auk::Button
                @skin="tertiary"
                @icon="pencil"
                {{action "setDefaultSignature"}}
              >
                {{t "signature-set-default"}}
              </Auk::Button>
              <Auk::Button
                @skin="tertiary"
                @icon="pencil"
                {{action "toggleIsEditing"}}
              >
                {{t "signature-edit"}}
              </Auk::Button>
            {{/if}}
            <Auk::Button
              @skin="tertiary"
              @icon="add"
              {{action "toggleIsAdding"}}
            >
              {{t "signature-add"}}
            </Auk::Button>
          </div>
        </div>
      </div>
    </div>
  {{/if}}
{{else}}
  {{utils/create-signature closeModal=(action "toggleIsAdding")}}
{{/if}}
