{{#if (not this.multiSelect)}}
  <PowerSelect
    @options={{this.agendas}}
    @selected={{this.selectedAgenda}}
    @disabled={{this.readOnly}}
    @placeholder={{this.placeholder}}
    @onChange={{action "selectModel"}}
    as |model|
  >
    {{#if (has-block)}}
      {{yield model}}
    {{else}}
      {{get model this.propertyToShow}}
    {{/if}}
  </PowerSelect>
{{else}}
  <PowerSelectMultiple
    @options={{this.agendas}}
    @selected={{this.selectedAgenda}}
    @disabled={{this.readOnly}}
    @placeholder={{this.placeholder}}
    @onChange={{action "selectModel"}}
    as |model|
  >
    {{#if (has-block)}}
      {{yield model}}
    {{else}}
      {{get model this.propertyToShow}}
    {{/if}}
  </PowerSelectMultiple>
{{/if}}