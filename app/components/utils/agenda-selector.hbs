{{#if (not this.multiSelect)}}
  <PowerSelect
    @options={{this.agendas}}
    @selected={{this.selectedAgenda}}
    @disabled={{this.readOnly}}
    @searchEnabled={{false}}
    @placeholder={{this.placeholder}}
    @onchange={{action "selectModel"}}
    as |model|
  >
    {{model-property-to-show model this.propertyToShow}}
  </PowerSelect>
{{else}}
  <PowerSelectMultiple
    @options={{this.agendas}}
    @searchEnabled={{false}}
    @selected={{this.selectedAgenda}}
    @disabled={{this.readOnly}}
    @placeholder={{this.placeholder}}
    @onchange={{action "selectModel"}}
    as |model|
  >
    {{model-property-to-show model this.propertyToShow}}
  </PowerSelectMultiple>
{{/if}}