{{#if (not multiSelect)}}
  <PowerSelect
    @options={{agendas}}
    @selected={{selectedAgenda}}
    @disabled={{readOnly}}
    @searchEnabled={{false}}
    @placeholder={{placeholder}}
    @onchange={{action "selectModel"}}
    as |model|
  >
    {{model-property-to-show model propertyToShow}}
  </PowerSelect>
{{else}}
  <PowerSelectMultiple
    @options={{agendas}}
    @searchEnabled={{false}}
    @selected={{selectedAgenda}}
    @disabled={{readOnly}}
    @placeholder={{placeholder}}
    @onchange={{action "selectModel"}}
    as |model|
  >
    {{model-property-to-show model propertyToShow}}
  </PowerSelectMultiple>
{{/if}}