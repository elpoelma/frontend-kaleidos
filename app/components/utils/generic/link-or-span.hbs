{{#let
  (if
    @isLink
    (if
      @href
      (element "a" href=@href)
      (component "link-to" route=@route model=@model)
    )
    (element "span")
  )
  as |Tag|
}}
  <Tag
    class="auk-pill auk-pill--default auk-u-mr-2"
    data-test-document-card-publication-link
  >
    {{yield}}
  </Tag>
{{/let}}