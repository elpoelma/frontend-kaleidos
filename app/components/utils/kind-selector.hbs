<div class="auk-form-group">
  {{#if (not hideLabel)}}
    <Auk::Label>{{t "kind"}}</Auk::Label>
  {{/if}}
  {{#if isLoading}}
    <div class="auk-u-muted">
      {{t "please-be-patient"}}
      <div class="auk-loader" role="alert" aria-busy="true"></div>
    </div>
  {{else}}
    <PowerSelect
      @options={{options}}
      @selected={{selectedkind}}
      @onchange={{action "setAction"}}
    as |option|>
      {{option.label}}
    </PowerSelect>
  {{/if}}
</div>