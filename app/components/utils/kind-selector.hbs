<div data-test-utils-kind-selector class="auk-form-group">
  {{#if (not @hideLabel)}}
    <Auk::Label>{{t "kind"}}</Auk::Label>
  {{/if}}
  <PowerSelect
    @options={{this.options}}
    @selected={{this.kind}}
    @onChange={{this.setAction}}
    as |option|
  >
    {{option.label}}
  </PowerSelect>
</div>