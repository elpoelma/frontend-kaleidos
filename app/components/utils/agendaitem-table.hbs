{{#light-table
  this.table
  tableClassNames="auk-table auk-table auk-table--striped auk-table--hoverable"
as |tab|
}}
  <tab.head
    @onColumnClick={{action "onColumnClick"}}
    @iconSortable="ki ki-caret-up-down"
    @iconAscending="ki ki-caret-down"
    @iconDescending="ki ki-caret-up"
  />
  <tab.body
    @canExpand={{true}}
    @multiRowExpansion={{false}}
    @onScrolledToBottom={{action "onScrolledToBottom"}}
    as |body|
  >
    <body.expanded-row as |row|>{{yield row}}</body.expanded-row>
    {{#if this.isLoading}}
      <body.loader>
        <WebComponents::VlLoader @text={{t "agendaitems-loading-text"}} />
      </body.loader>
    {{/if}}
  </tab.body>
{{/light-table}}
{{#if this.isScrolling}}
  <Auk::Button
    @skin="secondary"
    @layout="icon-only"
    @icon="plus"
  >
    {{t "back"}}
  </Auk::Button>
{{/if}}