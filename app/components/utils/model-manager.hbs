{{#web-components/vl-modal
  isOverlay=true
  title=modalTitle
  closeModal=(action "close")
}}
  {{#if (and (not isAdding) (not isEditing))}}
    <div class="auk-modal__content">
      <div class="vlc-input-field-block">
        {{utils/model-selector
          modelName=modelName
          searchField="label"
          propertyToShow="label"
          sortField="label"
          selectedItems=item
          selectModel=(action "selectModel")
        }}
      </div>
    </div>
    <div class="vlc-navbar vlc-navbar--white vlc-navbar--bordered-top">
      <div class="vlc-toolbar">
        <div class="vlc-toolbar__left">
          <div class="vlc-toolbar__item">
            <button type="button" data-test-vl-model-manager-close
                    class="auk-button auk-button--borderless"
              {{action "close"}}
            >
              {{t "cancel"}}
            </button>
          </div>
        </div>
        <div class="vlc-toolbar__right">
          <div class="vlc-toolbar__item">
            <button type="button" data-test-vl-model-manager-add
                    class="auk-button auk-button--tertiary vl-button--icon-before"
              {{action "toggleIsAdding"}}
            >
              <i class="vl-button__icon vl-button__icon--before ki-add"
              ></i>
              {{t "add"}}
            </button>
            {{#if item}}
              <button type="button"
                      data-test-vl-model-manager-edit
                      class="auk-button auk-button--tertiary vl-button--icon-before"
                {{action "toggleIsEditing"}}
              >
                <i class="vl-button__icon vl-button__icon--before ki-pencil"
                ></i>
                {{t "edit"}}
              </button>
              <button type="button" data-test-vl-model-manager-delete
                      class="auk-button auk-button--tertiary vl-button--icon-before"
                {{action "removeModel"}}
              >
                <i class="vl-button__icon vl-button__icon--before ki-delete"
                ></i>
                {{t "delete"}}
              </button>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  {{/if}}
  {{#if isAdding}}
    <div class="auk-modal__content">
      <div class="vlc-input-field-block">
        <WebComponents::AuLabel>{{t "title"}}</WebComponents::AuLabel>
        {{web-components/vl-form-input value=title}}
      </div>
    </div>
    {{web-components/vl-modal-footer
      isLoading=isLoading
      cancelButtonText=(t "cancel")
      saveButtonText=(t "add")
      cancelAction=(action "toggleIsAdding")
      saveAction=(action "createModel")
    }}
  {{/if}}
  {{#if isEditing}}
    <div class="auk-modal__content">
      <div class="vlc-input-field-block">
        <WebComponents::AuLabel>{{t "title"}}</WebComponents::AuLabel>
        {{web-components/vl-form-input value=title}}
      </div>
    </div>
    {{web-components/vl-modal-footer
      isLoading=isLoading
      cancelButtonText=(t "cancel")
      saveButtonText=(t "save")
      cancelAction=(action "toggleIsEditing")
      saveAction=(action "editModel")
    }}
  {{/if}}
{{/web-components/vl-modal}}
