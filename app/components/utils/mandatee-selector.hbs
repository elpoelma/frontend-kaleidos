{{#if (not this.singleSelect)}}
  <PowerSelectMultiple
    @options={{this.items}}
    @selected={{await this.selectedMandatees}}
    @disabled={{this.readOnly}}
    @closeOnSelect={{false}}
    @search={{perform this.searchTask}}
    @oninput={{action "resetValueIfEmpty"}}
    @onchange={{action "chooseMandatee"}}
  as |mandatee|>
    {{await mandatee.fullDisplayName}}
  </PowerSelectMultiple>
{{else}}
  <PowerSelect
    @options={{this.items}}
    @selected={{await this.selectedMandatees}}
    @disabled={{this.readOnly}}
    @search={{perform this.searchTask}}
    @oninput={{action "resetValueIfEmpty"}}
    @onchange={{action "chooseMandatee"}}
  as |mandatee|>
    {{await mandatee.fullDisplayName}}
  </PowerSelect>
{{/if}}