{{#if (not singleSelect)}}
  <PowerSelectMultiple
    @options={{items}}
    @selected={{await selectedMandatees}}
    @disabled={{readOnly}}
    @closeOnSelect={{false}}
    @search={{perform searchTask}}
    @oninput={{action "resetValueIfEmpty"}}
    @onchange={{action "chooseMandatee"}}
  as |mandatee|>
    {{await mandatee.fullDisplayName}}
  </PowerSelectMultiple>
{{else}}
  <PowerSelect
    @options={{items}}
    @selected={{await selectedMandatees}}
    @disabled={{readOnly}}
    @search={{perform searchTask}}
    @oninput={{action "resetValueIfEmpty"}}
    @onchange={{action "chooseMandatee"}}
  as |mandatee|>
    {{await mandatee.fullDisplayName}}
  </PowerSelect>
{{/if}}