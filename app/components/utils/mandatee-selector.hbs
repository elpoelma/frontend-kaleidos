{{#if (not @singleSelect)}}
  <PowerSelectMultiple
    @options={{this.mandatees}}
    @selected={{await this.selectedMandatees}}
    @disabled={{this.readOnly}}
    @closeOnSelect={{false}}
    @search={{perform this.searchTask}}
    @oninput={{this.resetValueIfEmpty}}
    @onchange={{this.chooseMandatee}}
  as |mandatee|>
    {{await mandatee.fullDisplayName}}
  </PowerSelectMultiple>
{{else}}
  <PowerSelect
    @options={{this.mandatees}}
    @selected={{await this.selectedMandatees}}
    @disabled={{this.readOnly}}
    @search={{perform this.searchTask}}
    @oninput={{this.resetValueIfEmpty}}
    @onchange={{this.chooseMandatee}}
  as |mandatee|>
    {{await mandatee.fullDisplayName}}
  </PowerSelect>
{{/if}}