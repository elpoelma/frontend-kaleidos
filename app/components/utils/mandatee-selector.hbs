<div class="mandatee-selector-container">
  {{#if (not @singleSelect)}}
    <PowerSelectMultiple
      @options={{this.mandatees}}
      @selected={{await @selectedMandatees}}
      @disabled={{@readOnly}}
      @closeOnSelect={{false}}
      @search={{perform this.searchTask}}
      @oninput={{this.resetValueIfEmpty}}
      @onchange={{@chooseMandatee}}
      as |mandatee|
    >
      {{await mandatee.fullDisplayName}}
    </PowerSelectMultiple>
  {{else}}
    <PowerSelect
      @options={{this.mandatees}}
      @selected={{await @selectedMandatees}}
      @disabled={{@readOnly}}
      @search={{perform this.searchTask}}
      @oninput={{this.resetValueIfEmpty}}
      @onchange={{@chooseMandatee}}
      as |mandatee|
    >
      {{await mandatee.fullDisplayName}}
    </PowerSelect>
  {{/if}}
</div>