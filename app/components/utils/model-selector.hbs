{{#if (not @multiple)}}
  <PowerSelect
    @options={{this.items}}
    @selected={{@selectedItems}}
    @disabled={{@disabled}}
    @allowClear={{@allowClear}}
    @searchField={{@searchField}}
    @placeholder={{@placeholder}}
    @loadingMessage={{this.loadingMessage}}
    @noMatchesMessage={{this.noMatchesMessage}}
    @searchEnabled={{this.searchEnabled}}
    @searchMessage={{null}}
    @search={{perform this.searchTask}}
    @oninput={{this.resetValueIfEmpty}}
    @onChange={{@onChange}}
  as |model|>
    {{#if (has-block)}}
      {{yield model}}
    {{else}}
      {{model-property-to-show model this.propertyToShow}}
    {{/if}}
  </PowerSelect>
{{else}}
  <PowerSelectMultiple
    @options={{this.items}}
    @selected={{@selectedItems}}
    @disabled={{@disabled}}
    @searchField={{@searchField}}
    @placeholder={{@placeholder}}
    @loadingMessage={{this.loadingMessage}}
    @searchEnabled={{this.searchEnabled}}
    @searchMessage={{null}}
    @noMatchesMessage={{this.noMatchesMessage}}
    @closeOnSelect={{false}}
    @search={{perform this.searchTask}}
    @oninput={{this.resetValueIfEmpty}}
    @onChange={{@onChange}}
  as |model|>
    {{#if (has-block)}}
      {{yield model}}
    {{else}}
      {{model-property-to-show model this.propertyToShow}}
    {{/if}}
  </PowerSelectMultiple>
{{/if}}