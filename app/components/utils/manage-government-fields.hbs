{{#web-components/vl-modal
  isOverlay=true
  title=modalTitle
  closeModal=(action "close")
}}
  {{#if (and (not isAdding) (not isEditing))}}
    <div class="auk-modal__content">
      <div class="auk-form-group">
        {{utils/model-selector
          modelName="government-field"
          searchField="label"
          propertyToShow="label"
          sortField="label"
          selectedItems=item
          selectModel=(action "selectModel")
        }}
      </div>
    </div>
    <div class="auk-navbar auk-navbar--white auk-navbar--bordered-top">
      <div class="auk-toolbar-complex">
        <div class="auk-toolbar-complex__left">
          <div class="auk-toolbar-complex__item">
            <button type="button" class="auk-button auk-button--borderless"
                    data-test-vl-model-manager-close
              {{action "close"}}
            >
              {{t "cancel"}}
            </button>
          </div>
        </div>
        <div class="auk-toolbar-complex__right">
          <div class="auk-toolbar-complex__item">
            <button type="button" class="auk-button auk-button--tertiary"
              data-test-vl-model-manager-add
              {{action "toggleIsAdding"}}
            >
              <div class="auk-icon auk-icon--default">
                <i class="ki ki-add"></i>
              </div>
              <div class="auk-button__label">
                {{t "add"}}
              </div>
            </button>
            {{#if item}}
              <button type="button"
                class="auk-button auk-button--tertiary"
                data-test-vl-model-manager-edit
                {{action "toggleIsEditing"}}
              >
                <div class="auk-icon auk-icon--default">
                  <i class="ki ki-pencil"></i>
                </div>
                <div class="auk-button__label">
                  {{t "edit"}}
                </div>
              </button>
              <button type="button"
                class="auk-button auk-button--tertiary"
                data-test-vl-model-manager-delete
                {{action "removeModel"}}
              >
                <div class="auk-icon auk-icon--default">
                  <i class="ki ki-delete"></i>
                </div>
                <div class="auk-button__label">
                  {{t "delete"}}
                </div>
              </button>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  {{/if}}
  {{#if isAdding}}
    <div class="auk-modal__content">
      <div class="auk-form-group">
        <WebComponents::AuLabel>{{t "government-field"}}</WebComponents::AuLabel>
        {{web-components/vl-form-input value=label}}
      </div>
      <div class="auk-form-group">
        <WebComponents::AuLabel>{{t "government-domain"}}</WebComponents::AuLabel>
        {{utils/model-selector
          modelName="government-domain"
          searchField="label"
          propertyToShow="label"
          sortField="label"
          selectedItems=domain
          selectModel=(action "chooseDomain")
        }}
      </div>
      <div class="auk-form-group">
        <WebComponents::AuLabel>{{t "ise-code"}}</WebComponents::AuLabel>
        {{utils/model-selector
          modelName="ise-code"
          searchField="name"
          propertyToShow="nameToShow"
          sortField="name"
          selectedItems=iseCode
          selectModel=(action "chooseIseCode")
        }}
      </div>
    </div>
    {{web-components/vl-modal-footer
      isLoading=isLoading
      cancelButtonText=(t "cancel")
      saveButtonText=(t "add")
      cancelAction=(action "toggleIsAdding")
      saveAction=(action "createModel")
    }}
  {{/if}}
  {{#if isEditing}}
    <div class="auk-modal__content">
      <div class="auk-form-group">
        <WebComponents::AuLabel>{{t "government-field"}}</WebComponents::AuLabel>
        {{web-components/vl-form-input value=label}}
      </div>
      <div class="auk-form-group">
        <WebComponents::AuLabel>{{t "government-domain"}}</WebComponents::AuLabel>
        {{utils/model-selector
          modelName="government-domain"
          searchField="label"
          propertyToShow="label"
          sortField="label"
          selectedItems=domain
          selectModel=(action "chooseDomain")
        }}
      </div>
      <div class="auk-form-group">
        <WebComponents::AuLabel>{{t "ise-code"}}</WebComponents::AuLabel>
        {{utils/model-selector
          modelName="ise-code"
          searchField="name"
          propertyToShow="name"
          sortField="name"
          selectedItems=iseCode
          selectModel=(action "chooseIseCode")
        }}
      </div>
    </div>
    {{web-components/vl-modal-footer
      isLoading=isLoading
      cancelButtonText=(t "cancel")
      saveButtonText=(t "save")
      cancelAction=(action "toggleIsEditing")
      saveAction=(action "editModel")
    }}
  {{/if}}
{{/web-components/vl-modal}}
