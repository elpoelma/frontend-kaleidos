<AuAlert
  @title={{@options.title}}
  @skin="error"
  @icon="alert-triangle"
  @closable={{true}}
>
  <div class="auk-u-text-capitalize">
    <p>{{@options.message}}</p>
    <div class="au-u-margin-top-small au-o-box--small au-u-background-gray-100">
      <Utils::ClipboardableContent @content={{@options.errorContent}} />
    </div>
  </div>
</AuAlert>