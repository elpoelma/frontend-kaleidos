<Auk::Modal>
  <Auk::Modal::Header @title={{t "edit-case"}} @onClose={{this.close}} />
  <Auk::Modal::Body>
    <div class="au-c-form">
      <AuFormRow>
        <Auk::Label>{{t "short-title-case"}}</Auk::Label>
        <Auk::Textarea
          data-test-edit-case-shorttitle
          @rows="2"
          @value={{mut this.shortTitle}}
        />
      </AuFormRow>
    </div>
  </Auk::Modal::Body>
  <Auk::Modal::Footer
    @cancelDisabled={{this.save.isRunning}}
    @onCancel={{this.close}}
  >
    <AuButton
      data-test-edit-case-save
      @skin="primary"
      @disabled={{this.isSaveDisabled}}
      @loading={{this.save.isRunning}}
      {{on "click" (perform this.save)}}
    >
      {{t "save"}}
    </AuButton>
  </Auk::Modal::Footer>
</Auk::Modal>