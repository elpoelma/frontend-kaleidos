{{#if (not isAddingCase)}}
  <div class="auk-toolbar-complex auk-toolbar-complex--auto">
    <div class="auk-toolbar-complex__left">
      <div class="auk-toolbar-complex__item">
        <h1 class="auk-toolbar__title" data-test-cases-header-title>
          {{t "cases"}}
        </h1>
      </div>
    </div>
    <div class="auk-toolbar-complex__right">
      <div class="auk-toolbar-complex__item">
        {{#if currentSession.isEditor}}
          <button type="button"
            data-test-cases-header-add-case
            class="auk-button auk-button--primary"
            {{action "toggleAddingCase"}}
          >
            <div class="auk-icon auk-icon--default ">
              <i class="ki ki-add"></i>
            </div>
            <div class="auk-button__label">
              {{t "add-case"}}
            </div>
          </button>
        {{/if}}
      </div>
    </div>
  </div>
{{else}}
  <WebComponents::VlModal
    @isOverlay={{true}}
    @closeModal={{action "toggleAddingCase"}}
    @title={{t "new-case"}} >
    <Cases::NewCase @close={{action "closeAction"}} />
  </WebComponents::VlModal>
{{/if}}
