<Auk::Modal::Body>
  {{#if this.hasError}}
    <Auk::Alert
      data-test-new-case-shorttitle-error
      @skin="error"
      @icon="alert-triangle"
      @title={{t "modal-error-alert-title"}}
      @message={{t "modal-error-alert-message"}}
    />
  {{/if}}

  <div
    class="auk-form-group {{this.getClassForShortTitle}}"
    data-test-new-case-shorttitle
  >
    <Auk::Label id="case-short-title">{{t "short-title-case"}}</Auk::Label>
    <Auk::Textarea
      @value={{this.shortTitle}}
      @rows="2"
      aria-labelledby="case-short-title"
    />
  </div>
</Auk::Modal::Body>
<Auk::Modal::Footer @custom={{true}}>
  <Auk::Toolbar @size="large">
    <Auk::Toolbar::Group @position="left">
      <Auk::Toolbar::Item>
        <Auk::ButtonLink {{on "click" this.closeAction}} data-test-new-case-cancel>
          {{t "cancel"}}
        </Auk::ButtonLink>
      </Auk::Toolbar::Item>
    </Auk::Toolbar::Group>
    <Auk::Toolbar::Group @position="right">
      <Auk::Toolbar::Item>
        <Auk::Button
          @skin="primary"
          @loading={{this.isLoading}}
          data-test-new-case-save={{true}}
          {{on "click" this.createCaseAction}}
        >
          {{t "create-case"}}
        </Auk::Button>
      </Auk::Toolbar::Item>
    </Auk::Toolbar::Group>
  </Auk::Toolbar>
</Auk::Modal::Footer>