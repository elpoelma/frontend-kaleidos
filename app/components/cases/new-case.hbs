<form onsubmit={{action "createCaseAction"}}>
  <Auk::Modal::Body>
    {{#if hasError}}
      <Auk::Alert
        data-test-new-case-shorttitle-error
        @skin="error"
        @icon="alert-triangle"
        @title={{t "modal-error-alert-title"}}
        @message={{t "modal-error-alert-message"}}
      />
    {{/if}}

    <div class="auk-u-mb-4">
      <div class="auk-form-group">
        <Auk::Label>{{t "confidential"}}</Auk::Label>
        <WebComponents::VlToggle
          data-test-new-case-toggle-confidential={{true}}
          @value={{confidential}}
        />
      </div>
    </div>
    <div class="auk-form-group {{getClassForShortTitle}}" data-test-new-case-shorttitle>
      <Auk::Label>{{t "short-title-case"}}</Auk::Label>
      <Textarea class="auk-textarea" @rows="2" @value={{shortTitle}} />
    </div>
  </Auk::Modal::Body>
  <Auk::Modal::Footer @custom={{true}}>
    <Auk::Toolbar @size="large">
      <Auk::Toolbar::Group @position="left">
        <Auk::Toolbar::Item>
          <Auk::ButtonLink
            {{action "closeAction"}}
            data-test-new-case-cancel
          >
            {{t "cancel"}}
          </Auk::ButtonLink>
        </Auk::Toolbar::Item>
      </Auk::Toolbar::Group>
      <Auk::Toolbar::Group @position="right">
        <Auk::Toolbar::Item>
          <WebComponents::VlSaveButton
            data-test-new-case-save={{true}}
            @text={{t "create-case"}}
            @type="submit"
            @isLoading={{isLoading}}
          />
        </Auk::Toolbar::Item>
      </Auk::Toolbar::Group>
    </Auk::Toolbar>
  </Auk::Modal::Footer>
</form>