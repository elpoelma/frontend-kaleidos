{{!-- template-lint-disable no-bare-strings --}}
<Auk::Navbar @skin="white" @noPadding={{true}}>
  <Auk::Toolbar>
    <Auk::Toolbar::Group @position="left">
      <Auk::Toolbar::Item>
        <Auk::Brand @logotype="Kaleidos" />
      </Auk::Toolbar::Item>
    </Auk::Toolbar::Group>
    <Auk::Toolbar::Group @position="right">
      {{#if this.showEnvironmentName}}
        <Auk::Toolbar::Item class="auk-u-mr-3">
          <div class="vlc-environment-pill {{this.environmentClass}}">
            {{this.environmentName}}
          </div>
        </Auk::Toolbar::Item>
      {{/if}}
      <Auk::Toolbar::Item class="auk-u-mr-3">
        <AuDropdown
          @title={{t "help"}}
          @alignment="right"
          @icon="circle-question"
          @iconAlignment="left"
        >
          <AuLink
            @route="manual"
            role="menuitem"
            target="_blank"
          >
            {{t "look-at-documentation"}}
          </AuLink>
          <AuHr />
          <AuLink
            href="mailto:kaleidos.servicedesk@vlaanderen.be"
            target="_blank"
            role="menuitem"
          >
            <span class="auk-u-text-nowrap">{{t "contact-us"}}</span>
            <span class="auk-u-text-muted auk-u-text-size--small">
              {{t "email-servicedesk"}}
            </span>
          </AuLink>
        </AuDropdown>
      </Auk::Toolbar::Item>
    </Auk::Toolbar::Group>
  </Auk::Toolbar>
</Auk::Navbar>
<div class="auk-scroll-wrapper">
  <div class="auk-scroll-wrapper__body">
    <div class="auk-u-p-4">
      <div class="auk-o-flex auk-o-flex--horizontal-center">
        <div class="auk-content auk-u-maximize-width auk-u-max-width-xlarge">
          <div class="auk-u-my-4">
            <h4 class="auk-u-mb-2">Aanmelden als bepaald profiel (generiek)</h4>
            <p class="auk-u-mb-4">Kies een type gebruiker om mee aan te melden:</p>
            <div class="auk-panel auk-u-mb-8">
              <MockLogin as |login|>
                {{#if login.errorMessage}}
                  <Auk::Alert
                    @skin="error"
                    @message={{login.errorMessage}}
                  />
                {{/if}}
                {{#if this.model.length}}
                  <ul class="auk-list auk-list--view" data-test-mock-login-list>
                    <login.each-account @accounts={{this.model}} as |account|>
                      <Auk::List::Item>
                        <div class="auk-u-mx-2">
                          <span>{{account.user.firstName}} {{account.user.lastName}}</span>
                        </div>
                        <Auk::Button
                          @skin="borderless"
                          @layout="icon-only"
                          @icon="chevron-right"
                        />
                      </Auk::List::Item>
                    </login.each-account>
                  </ul>
                {{else}}
                  Geen accounts gevonden.
                {{/if}}
              </MockLogin>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>