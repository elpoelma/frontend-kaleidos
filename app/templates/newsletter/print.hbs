{{page-title
  (if this.showDraft "Klad ")
  (t "newsletter-overview-pdf-name")
  " "
  (moment-format this.meeting.plannedStart)
  replace=true
}}
<div class="auk-scroll-wrapper__body vlc-hide-scrollbar-on-print">
  <div class="auk-u-m-8 auk-u-m-0@print">
    <div class="auk-container auk-container--center l-printable-newsletter">
      <Utils::LogoHeader />
      <Newsletter::NewsletterMeeting
        data-test-newsletter-print---newslettermeeting
        @allowEditing={{not this.showDraft}}
        @meeting={{this.meeting}}
      />
      <h1 class="auk-h1 auk-u-text-family-serif">
        {{t "agendaitems-subtitle"}}
      </h1>
      {{#each (await this.model.notas) as |agendaitem index|}}
        {{#let (add index 1) as |humanIndex|}}
          {{#let (await agendaitem.treatment.newsletterInfo) as |newsletterInfo|}}
            <Newsletter::NewsletterItem
              @showIndex={{this.showDraft}}
              @itemIndex={{if this.showDraft agendaitem.number humanIndex}}
              @allowEditing={{this.showDraft}}
              @agendaitem={{agendaitem}}
              @newsletterInfo={{newsletterInfo}}
              @onSaveNewsletterEdit={{fn this.saveNewsletterChanges newsletterInfo}}
            />
          {{/let}}
        {{/let}}
      {{/each}}
      {{#if (await this.model.announcements.length)}}
        <h2 class="auk-h1">
          {{t "announcements-subtitle"}}
        </h2>
        {{#each (await this.model.announcements) as |agendaitem|}}
          {{#let (await agendaitem.treatment.newsletterInfo) as |newsletterInfo|}}
            <Newsletter::NewsletterItem
              @showIndex={{this.showDraft}}
              @itemIndex={{agendaitem.number}}
              @allowEditing={{this.showDraft}}
              @agendaitem={{agendaitem}}
              @newsletterInfo={{newsletterInfo}}
              @onSaveNewsletterEdit={{fn this.saveNewsletterChanges newsletterInfo}}
            />
          {{/let}}
        {{/each}}
      {{/if}}
    </div>
  </div>
</div>