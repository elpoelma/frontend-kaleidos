                <td>
                  {{moment-format
                    signFlow.decisionActivity.startDate
                    "DD-MM-YYYY"
                  }}
                </td>
                <td>
                  <Auk::Button
                    @skin="borderless"
                    @icon="sign"
                    class="auk-table__link"
                    {{on "click" this.showSidebar}}
                  >
                    Tekenen opstarten
                  </Auk::Button>
                </td>
              </tr>
              {{/if}}
            {{/each}}
          </tbody>
        </table>
