{{page-title (t "to-follow-up") }}

<AuMainContainer class="l-search-container au-u-background-gray-100" as |m|>
  <m.sidebar>
    <div class="au-c-sidebar">
      <div class="au-c-sidebar__content">
        <div
          id="search-subroute-filters-area"
          class="au-o-box au-o-box--small au-o-flow au-o-flow--tiny"
        >
          <Search::DateRangeFilter
            @dateFrom={{this.dateFrom}}
            @dateTo={{this.dateTo}}
            @onDateFromChange={{this.setDateFrom}}
            @onDateToChange={{this.setDateTo}}
            @onDateFromClear={{set this "dateFrom" undefined}}
            @onDateToClear={{set this "dateTo" undefined}}
          />
          <div class="au-c-card au-o-box au-o-box--small">
            <Auk::Label>{{t "status"}}</Auk::Label>
            <Signatures::StatusFilter
              @selectedStatusIds={{this.statuses}}
              @onChange={{this.onChangeStatus}}
              @excludedStatuses={{this.excludedStatuses}}
            />
          </div>
          {{#if this.currentSession.isAdmin}}
          <div class="au-c-card au-o-box au-o-box--small">
            <Auk::Label>{{t "submitter"}}</Auk::Label>
              <Search::MinisterFilter
                @selected={{this.mandatees}}
                @onChange={{this.setMandatees}}
                @label={{t "th-select-all"}}
              />
          </div>
          {{/if}}
        </div>
      </div>
    </div>
  </m.sidebar>
  <m.content @scroll={{true}}>
    <table class="auk-table auk-table--hoverable auk-table--striped">
      <thead>
        <th class="auk-table__col--4">{{t "document-name"}}</th>
        <th class="auk-table__col--1">{{t "document-type"}}</th>
        <th class="auk-table__col--2">{{t "ministers"}}</th>
        <th class="auk-table__col--1">{{t "date-approved"}}</th>
        <th class="auk-table__col--2">Opgestart door</th>
        <th class="auk-table__col--2">{{t "status"}}</th>
        <th class="auk-table__col--1"></th>
        </thead>
      <tbody>
        {{# each this.mockupData as |mockup|}}
        <tr class="{{if (not-eq mockup.admin 'Dorien Ivens') 'auk-table-row-disabled'}}">
          <td>
            {{mockup.name}}
          </td>
          <td>
            <AuPill @size="small">{{mockup.type}}</AuPill>
          </td>
          <td>
            {{mockup.ministers}}
          </td>
          <td>
            {{mockup.date}}
          </td>
          <td>{{mockup.admin}}</td>
          <td>
            {{#if (eq mockup.status 'Getekend')}}
            <AuPill @size="small" @icon="sign" @skin="success">{{mockup.status}}</AuPill>
            {{else if (eq mockup.status 'Te ondertekenen')}}
            <AuPill @size="small" @icon="sign" @skin="ongoing">{{mockup.status}}</AuPill>
            {{else}}
            <AuPill @size="small" @icon="sign">{{mockup.status}}</AuPill>
            {{/if}}
          </td>
          <td class="auk-u-text-align--right">
            {{#if (eq mockup.admin 'Dorien Ivens')}}
            <AuButton
              @skin="naked"
              @icon="chevron-right"
              @hideText={{true}}
            >
              {{t "open"}}
            </AuButton>
            {{/if}}
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
    <div class="au-c-toolbar auk-table__actions--bottom" data-test-number-pagination-container="">
      <div class="au-c-toolbar__group">
        <div class="auk-pagination">
          <ul class="auk-pagination__list">
            <li class="auk-pagination__element">
              <p><strong>1-2</strong> van 2</p>
            </li>
          </ul>
        </div>
      </div>
      <div class="au-c-toolbar__group">
        <div class="auk-toolbar-complex__item">
          Aantal resultaten per pagina
        </div>
        <div class="auk-toolbar-complex__item">
          <div class="au-c-form-row ">
            <div class="ember-view ember-basic-dropdown-trigger ember-power-select-trigger  auk-select auk-select--block" role="button" tabindex="0" data-ebd-id="ember57-trigger" aria-owns="" aria-controls="ember-power-select-options-ember57" aria-expanded="false" aria-haspopup="listbox" data-test-number-pagination-size="">
              <span class="ember-power-select-selected-item">
                25
              </span>
              <span class="ember-power-select-status-icon"></span>
            </div>
            <div id="ember-basic-dropdown-content-ember57" class="ember-basic-dropdown-content-placeholder"></div>
          </div>
        </div>
      </div>
    </div>
  </m.content>
</AuMainContainer>