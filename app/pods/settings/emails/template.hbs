{{page-title (t "manage-emails")}}

<div class="auk-u-m-8">
  <div class="auk-u-mb-3">
    <Auk::Panel>
      <Auk::Panel::Header>
        <Auk::Toolbar>
          <Auk::Toolbar::Group @position="left">
            <Auk::Toolbar::Item>
              <h4 class="auk-panel__title">{{t "manage-emails"}}</h4>
            </Auk::Toolbar::Item>
          </Auk::Toolbar::Group>
        </Auk::Toolbar>
      </Auk::Panel::Header>
      <Auk::Panel::Body>
        <div class="auk-content">
          <h4>{{t "translation-requests"}}</h4>
          <div class="auk-form-group-layout--horizontal">
            <div class="auk-form-group">
              <Auk::Label>
                {{t "email-to"}}
              </Auk::Label>
              <Auk::Input
                @value={{mut this.model.translationRequestToEmail}}
                @block={{true}}
              />
            </div>
            <div class="auk-form-group">
              <Auk::Label>
                {{t "email-cc"}}
              </Auk::Label>
              <Auk::Input
                @value={{mut this.model.translationRequestCcEmail}}
                @block={{true}}
              />
            </div>
          </div>
        </div>
      </Auk::Panel::Body>
      <Auk::Panel::Body>
        <div class="auk-content">
          <h4>{{t "proof-requests"}}</h4>
          <div class="auk-form-group-layout--horizontal">
            <div class="auk-form-group">
              <Auk::Label>
                {{t "email-to"}}
              </Auk::Label>
              <Auk::Input
                @value={{mut this.model.proofRequestToEmail}}
                @block={{true}}
              />
            </div>
            <div class="auk-form-group">
              <Auk::Label>
                {{t "email-cc"}}
              </Auk::Label>
              <Auk::Input
                @value={{mut this.model.proofRequestCcEmail}}
                @block={{true}}
              />
            </div>
          </div>
        </div>
      </Auk::Panel::Body>
      <Auk::Panel::Body>
        <div class="auk-content">
          <h4>{{t "publication-requests"}}</h4>
          <div class="auk-form-group-layout--horizontal">
            <div class="auk-form-group">
              <Auk::Label>
                {{t "email-to"}}
              </Auk::Label>
              <Auk::Input
                @value={{mut this.model.publicationRequestToEmail}}
                @block={{true}}
              />
            </div>
            <div class="auk-form-group">
              <Auk::Label>
                {{t "email-cc"}}
              </Auk::Label>
              <Auk::Input
                @value={{mut this.model.publicationRequestCcEmail}}
                @block={{true}}
              />
            </div>
          </div>
        </div>

        <Auk::Button
          class="auk-u-mt-2 auk-u-mb-1"
          @skin="primary"
          @disabled={{this.isDisabled}}
          @loading={{this.saveSettings.isRunning}}
          {{on "click" (perform this.saveSettings)}}
        >
          {{t "save"}}
        </Auk::Button>
      </Auk::Panel::Body>
    </Auk::Panel>
  </div>
</div>