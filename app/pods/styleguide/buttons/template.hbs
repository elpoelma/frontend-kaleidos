<h1 class="vlc-kitchensink-header">Buttons</h1>

<Styleguide::KitchensinkSample
  @title="Button skins"
  @snippet="skins.hbs"
>
  {{!-- BEGIN-SNIPPET skins --}}
  <button class="vl-button" type="button">Primary button</button>
  <button class="vl-button vl-button--secondary" type="button">Secondary button</button>
  <button class="vl-button vl-button--tertiary" type="button">Tertiary button</button>
  {{!-- END-SNIPPET --}}
</Styleguide::KitchensinkSample>

<Styleguide::KitchensinkSample
  @title="Button states"
  @snippet="states.hbs"
>
  {{!-- BEGIN-SNIPPET states --}}
  <button class="vl-button vl-button--disabled" type="button">Disabled button</button>
  <button class="vl-button vl-button--error " type="button">Error button</button>
  <button class="vl-button vl-button--block" type="button">Block button</button>
  {{!-- END-SNIPPET --}}
</Styleguide::KitchensinkSample>

<Styleguide::KitchensinkSample
  @title="Icon buttons"
  @snippet="icon-buttons.hbs"
>
  {{!-- BEGIN-SNIPPET icon-buttons --}}
  <button type="button" class="vl-button vl-button--secondary vl-button--icon">
    <i class="ki-cross vl-button__icon" aria-hidden="true"></i>
  </button>
  {{!-- END-SNIPPET --}}
</Styleguide::KitchensinkSample>

<Styleguide::KitchensinkSample
  @title="Link buttons"
  @snippet="link-buttons.hbs"
>
  {{!-- BEGIN-SNIPPET link-buttons --}}
  <button type="button" class="vl-button vl-button--link">Link button</button>
  <button type="button" class="vl-button vl-button--link-muted">Link muted button</button>
  {{!-- END-SNIPPET --}}
</Styleguide::KitchensinkSample>

