      <Auk::Checkbox @label="Label 2" @checked={{true}} />
      <Auk::Checkbox @label="Label 3" />
      <Auk::Checkbox @label="Label 4" @disabled={{true}} @checked={{true}} />
      <Auk::Checkbox @label="Label 5" @disabled={{true}} />
    </Auk::CheckboxList>
  </fieldset>
  {{!-- END-SNIPPET --}}
</StyleguideSample>

<StyleguideSample
        @title="Checkbox without label"
        @snippet="checkbox-without-label.hbs">
  {{!-- BEGIN-SNIPPET checkbox-without-label --}}
  <Auk::Checkbox @checked={{true}} />
  {{!-- END-SNIPPET --}}
