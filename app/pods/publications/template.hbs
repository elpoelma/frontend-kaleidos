<div class="vlc-panel-layout__main-content">
  <Navbar @auto="true">
    <Toolbar @auto="true">
      <Toolbar::Group>
        <Toolbar::Item>
          <Tabs>
            <Tab @route="publications.in-progress">{{t "publications.in-progress"}} ({{amountInProgress}})</Tab>
            <Tab @route="publications.done">{{t "publications.done"}} ({{amountDone}})</Tab>
          </Tabs>
        </Toolbar::Item>
      </Toolbar::Group>
      <Toolbar::Group @position="right">
        <Toolbar::Item>
          <AuButton @icon="add" @skin="primary" {{on "click" (fn this.showNewPublicationModal)}}>
            {{t "publications.new"}}
          </AuButton>
        </Toolbar::Item>
      </Toolbar::Group>
    </Toolbar>
  </Navbar>
  <div class="vlc-u-box-model-maximize-height vlc-scroll-wrapper">
    <Navbar @size="large" @border="none">
      <Toolbar>
        <Toolbar::Group>
          <AuInput @icon="search" @block="true" placeholder="Zoeken..."></AuInput>
        </Toolbar::Group>
        <Toolbar::Group @position="right">
          <Toolbar::Item>
            <AuButton @icon="filter">{{t "filter"}}</AuButton>
          </Toolbar::Item>
        </Toolbar::Group>
      </Toolbar>
    </Navbar>
    {{#if isShowingPublicationModal}}
      <WebComponents::AuModal>
        <WebComponents::AuModal::Modal::Header @title={{t "publications-new-not-minister"}} />
        <WebComponents::AuModal::Modal::Body>
          <p>{{t "publications-new-warning-message"}}</p>
        </WebComponents::AuModal::Modal::Body>
        <WebComponents::AuModal::Modal::Footer>
          <WebComponents::AuToolbar>
            <WebComponents::AuToolbar::Group @position="left">
              <WebComponents::AuToolbar::Item>
                <AuButton @skin="borderless">{{t "cancel"}}</AuButton>
              </WebComponents::AuToolbar::Item>
            </WebComponents::AuToolbar::Group>
            <WebComponents::AuToolbar::Group @position="right">
              <WebComponents::AuToolbar::Item>
                <AuButton @skin="primary">{{t "publications-new-button-text"}}</AuButton>
              </WebComponents::AuToolbar::Item>
            </WebComponents::AuToolbar::Group>
          </WebComponents::AuToolbar>
        </WebComponents::AuModal::Modal::Footer>
      </WebComponents::AuModal>
    {{/if}}
    {{outlet}}
  </div>
</div>