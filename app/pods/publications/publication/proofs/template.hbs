<div class="auk-u-m-4">
  <Publications::Publication::Proofs::PublicationInfo @publicationFlow={{this.model}} @didChange={{this.saveSidebarProperty}} />

  <Auk::Panel class="auk-u-mt-4">
    <Auk::Panel::Header>
      <Auk::Toolbar>
        <Auk::Toolbar::Group @position="left">
          <Auk::Toolbar::Item>
            <h4 class="auk-panel__title">
              {{t "publicationSection.proofs"}}
            </h4>
          </Auk::Toolbar::Item>
        </Auk::Toolbar::Group>
        <Auk::Toolbar::Group @position="right">
          <Auk::Toolbar::Item>
            <Auk::Button
              @skin="secondary"
              @icon="plus"
              {{on "click" this.openProofUploadModal}}
            >
              {{t "publicationSection.proof-add"}}
            </Auk::Button>
          </Auk::Toolbar::Item>
          <Auk::Toolbar::Item>
            <Auk::Button
              @skin="primary"
              @icon="plus"
                {{on "click" this.openProofRequestModal}}
            >
              {{t "publicationSection.proof-request"}}
            </Auk::Button>
          </Auk::Toolbar::Item>
        </Auk::Toolbar::Group>
      </Auk::Toolbar>
    </Auk::Panel::Header>
    <Auk::Panel::Body class="auk-u-bg-alt">
      <div class="vlc-procedure-step vlc-procedure-step--nopadding">
        <div class="vlc-procedure-step__badge-wrapper">
          <Auk::Badge
            @skin="success"
            @size="medium"
            @icon="check"
            class="vlc-procedure-step__badge"
          />
        </div>
        <Auk::Panel>
          <Auk::Panel::Header>
            <Auk::Toolbar>
              <Auk::Toolbar::Group @position="left">
                <Auk::Toolbar::Item>
                  <div class="auk-content">
                    <h4 class="auk-u-m-0">{{t "publicationSection.proof-received"}}</h4>
                    <p class="auk-u-text-small auk-u-m-0">
                      30.11.2021
                    </p>
                  </div>
                </Auk::Toolbar::Item>
              </Auk::Toolbar::Group>
              <Auk::Toolbar::Group @position="right">
                <DropdownMenu
                  @skin="borderless"
                  @icon="three-dots"
                  @placement="bottom-end"
                as |Menu|>
                  <Menu.Item>
                    {{t "publicationSection.publication-request"}}
                  </Menu.Item>
                  <Menu.Item>
                    {{t "util.edit"}}
                  </Menu.Item>
                </DropdownMenu>
              </Auk::Toolbar::Group>
            </Auk::Toolbar>
          </Auk::Panel::Header>
          <Auk::Panel::Body>
            <ul class="auk-list">
              <li class="auk-list__item auk-o-flex auk-o-flex--horizontal auk-o-flex--spaced-wide">
                <div class="auk-o-flex auk-o-flex--horizontal auk-o-flex--spaced">
                  <Auk::Badge @icon="paperclip" />
                  <h5 class="auk-h4 auk-u-m-0">65489.pdf</h5>
                </div>
                <Auk::ButtonLink @layout="icon-only" @icon="book">{{t "util.view"}}</Auk::ButtonLink>
                <Auk::ButtonLink @layout="icon-only" @icon="download">{{t "util.download"}}</Auk::ButtonLink>
              </li>
              <li class="auk-list__item auk-o-flex auk-o-flex--horizontal auk-o-flex--spaced-wide">
                <div class=" auk-o-flex auk-o-flex--horizontal auk-o-flex--spaced">
                  <Auk::Badge @icon="paperclip" />
                  <h5 class="auk-h4 auk-u-m-0">65489-fr.pdf</h5>
                </div>
                <Auk::ButtonLink @layout="icon-only" @icon="book">{{t "util.view"}}</Auk::ButtonLink>
                <Auk::ButtonLink @layout="icon-only" @icon="download">{{t "util.download"}}</Auk::ButtonLink>
              </li>
            </ul>
          </Auk::Panel::Body>
        </Auk::Panel>
      </div>

      <div class="vlc-procedure-step vlc-procedure-step--nopadding">
        <div class="vlc-procedure-step__badge-wrapper">
          <Auk::Badge
            @skin="primary"
            @size="medium"
            @icon="mail"
            class="vlc-procedure-step__badge"
          />
        </div>
        <Auk::AccordionPanel @isDefaultActive={{true}} as |accordionPanel|>
          <accordionPanel.Header @title="Aanvraag verzonden" @date="30.11.2021" as |header|>
            <header.Actions as |actions|>
              <actions.Item>
                <DropdownMenu
                  @skin="borderless"
                  @icon="three-dots"
                  @placement="bottom-end"
                as |Menu|>
                  <Menu.Item @skin="danger">
                    {{t "util.delete"}}
                  </Menu.Item>
                </DropdownMenu>
              </actions.Item>
            </header.Actions>
          </accordionPanel.Header>
          <accordionPanel.Body>
            <ul class="auk-list">
              <li class="auk-list__item auk-o-flex auk-o-flex--horizontal auk-o-flex--spaced-wide">
                <div class="auk-o-flex auk-o-flex--horizontal auk-o-flex--spaced">
                  <Auk::Badge @icon="paperclip" />
                  <h5 class="auk-h4 auk-u-m-0">65489.pdf</h5>
                </div>
                <Auk::ButtonLink @layout="icon-only" @icon="book">{{t "util.view"}}</Auk::ButtonLink>
                <Auk::ButtonLink @layout="icon-only" @icon="download">{{t "util.download"}}</Auk::ButtonLink>
              </li>
              <li class="auk-list__item auk-o-flex auk-o-flex--horizontal auk-o-flex--spaced-wide">
                <div class=" auk-o-flex auk-o-flex--horizontal auk-o-flex--spaced">
                  <Auk::Badge @icon="paperclip" />
                  <h5 class="auk-h4 auk-u-m-0">65489-fr.pdf</h5>
                </div>
                <Auk::ButtonLink @layout="icon-only" @icon="book">{{t "util.view"}}</Auk::ButtonLink>
                <Auk::ButtonLink @layout="icon-only" @icon="download">{{t "util.download"}}</Auk::ButtonLink>
              </li>
            </ul>
            <div class="auk-hr"></div>
            <div class="auk-content">
              <h4 class="auk-u-m-0">Onderwerp</h4>
              <p>Drukproefkaanvraag VO-dossier: 3</p>
              <h4 class="auk-u-m-0">Bericht</h4>
              <p>Collega,</p>
              <p>
                Hierbij voor drukproef:  VO-dossier: 3<br/>
                Titel: Omkadering leerlingondersteuning<br/>
                Uiterste vertaaldatum: 12-08-2021<br/>
                Aantal paginaâ€™s: 0<br/>
                Aantal woorden: 0<br/>
                Aantal documenten: 1
              </p>
              <p>
                Met vriendelijke groeten,<br/>
                Team Ondersteuning Vlaamse Regering<br/>
                DEPARTEMENT KANSELARIJ & BUITENLANDSE ZAKEN<br/>
                publicatiesBS@vlaanderen.be<br/>
                Koolstraat 35, 1000 Brussel
              </p>
            </div>
          </accordionPanel.Body>
        </Auk::AccordionPanel>
      </div>
    </Auk::Panel::Body>
  </Auk::Panel>
</div>

{{#if this.showProofUploadModal}}
  <Publications::Publication::Proofs::ProofUploadModalMockup
    @publicationFlow={{this.model}}
    @onSave={{perform this.closeProofUploadModal}}
    @onCancel={{this.closeProofUploadModal}}
  />
{{/if}}

{{#if this.isProofRequestModalOpen}}
  <Publications::Publication::Proofs::ProofRequestModal
    @stage={{this.proofRequestStage}}
    @publicationFlow={{this.model}}
    @attachments={{this.selectedPieces}}
    @onSave={{this.closeProofRequestModal}}
    @onCancel={{this.closeProofRequestModal}}
  />
{{/if}}