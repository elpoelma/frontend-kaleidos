<div class="auk-u-m-4">
  {{#each this.rows as |row|}}
    <div class="auk-u-mb-4">
      <Auk::AccordionPanel @isDefaultActive={{true}} as |accordionPanel|>
        <accordionPanel.Header
          @title={{t
            "x-request-type-x-timestamp"
            request-type=(t row.requestTypeTranslationKey)
            date=(moment-format row.requestActivity.startDate "D MMMM")
            time=(moment-format row.requestActivity.startDate "H:mm")
          }}
          as |header|>
          <header.Actions as |actions|>
            <actions.Item>
              {{#let (unique-id) as |id|}}
                <Auk::Button id={{id}}
                  @layout="icon-only" @icon="more">
                  {{t "view-more"}}
                </Auk::Button>
                {{!-- TODO: figure out how to properly use EmberPopover/AttachPopover (click+styling) --}}
                <EmberPopover
                  @side="bottom-end" @tooltipClass="auk-popover"
                  @targetId={{id}}>
                  <Auk::Dropdown
                    as |dropdown|>
                    {{#if row.canOpenUploadModal}}
                      <dropdown.Item
                        {{on "click" (fn this.openUploadModal row)}}>
                        {{t "upload-documents"}}
                      </dropdown.Item>
                    {{/if}}
                    <dropdown.Item disabled={{true}}>
                      {{t "download-all-documents"}}
                    </dropdown.Item>
                    <dropdown.Item disabled={{true}}>
                      {{t "cancel-request"}}
                    </dropdown.Item>
                  </Auk::Dropdown>
                </EmberPopover>
              {{/let}}
            </actions.Item>
          </header.Actions>
        </accordionPanel.Header>
        <accordionPanel.Body>
          <div class="auk-o-grid">
            <div class="auk-o-grid-col-6">
              <div class="auk-u-mb-2">
                <p class="auk-u-text-bold auk-u-muted auk-u-mb">{{t "subject"}}</p>
                <p>{{row.requestActivity.email.subject}}</p>
              </div>
              <div class="auk-u-mb-2">
                <p class="auk-u-text-bold auk-u-muted auk-u-mb">{{t "message"}}</p>
                <div class="auk-box">
                  {{!-- on 1 line to prevent whitespace to be rendered --}}
                  <p style="white-space:pre-line;">{{row.requestActivity.email.message}}</p>
                </div>
              </div>
            </div>
            <div class="auk-o-grid-col-6">
              <div class="auk-u-mb-2">
                <p class="auk-u-text-bold auk-u-muted auk-u-mb">{{t "files"}}</p>
                <Utils::Documents::List @pieces={{row.attachments}} />
              </div>
              {{#if row.receivedPieces}}
                <div class="auk-u-mb-2">
                  <p class="auk-u-text-bold auk-u-muted auk-u-mb">{{t "received-documents"}}</p>
                  <Utils::Documents::List @pieces={{row.receivedPieces}} />
                </div>
              {{/if}}
            </div>
          </div>
        </accordionPanel.Body>
      </Auk::AccordionPanel>
    </div>
  {{else}}
    <Auk::Panel>
      <Auk::Panel::Body>
        <Auk::EmptyState @message={{t "no-proofing-activities-yet"}} />
      </Auk::Panel::Body>
    </Auk::Panel>
  {{/each}}
</div>

{{#if this.isUploadModalOpen}}
  <Publications::Publication::Proofs::UploadModal
    @publicationFlow={{this.publicationFlow}}
    @onSave={{this.saveProof}}
    @onCancel={{this.closeUploadModal}} />
{{/if}}