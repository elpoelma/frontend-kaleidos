  <Publications::Publication::Translations::TranslationUploadModalMockup
    @publicationFlow={{this.model}}
    @onSave={{perform this.closeTranslationUploadModal}}
    @onCancel={{this.closeTranslationUploadModal}}
  />
{{/if}}