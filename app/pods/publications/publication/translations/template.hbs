<Auk::Navbar @border="bottom">
  <WebComponents::AuToolbar @size="large">
    <WebComponents::AuToolbar::Group @position="left">
      <WebComponents::AuToolbar::Item>
        <Auk::Tabs>
          <Auk::Tab @route="publications.publication.translations.documents">
            {{capitalize (t "documents")}}
          </Auk::Tab>
          <Auk::Tab @route="publications.publication.translations.requests">
            {{capitalize (t "requests")}}
          </Auk::Tab>
        </Auk::Tabs>
      </WebComponents::AuToolbar::Item>
    </WebComponents::AuToolbar::Group>
    <WebComponents::AuToolbar::Group @position="right">
      <WebComponents::AuToolbar::Item>
        <Auk::Checkbox
          @label={{t "finished"}}
          @checked={{false}}
        />
      </WebComponents::AuToolbar::Item>
    </WebComponents::AuToolbar::Group>
  </WebComponents::AuToolbar>
</Auk::Navbar>
{{outlet}}