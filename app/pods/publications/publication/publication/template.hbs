<div class="auk-u-m-4">
  <Publications::Publication::Publication::PublicationInfo @publicationFlow={{this.model}} @didChange={{this.saveSidebarProperty}} />

  <Auk::Panel class="auk-u-mt-4">
    <Auk::Panel::Header>
      <Auk::Toolbar>
        <Auk::Toolbar::Group @position="left">
          <Auk::Toolbar::Item>
            <h4 class="auk-panel__title">
              {{t "publicationSection.publications"}}
            </h4>
          </Auk::Toolbar::Item>
        </Auk::Toolbar::Group>
        <Auk::Toolbar::Group @position="right">
          <Auk::Toolbar::Item>
            <Auk::Button
              @skin="secondary"
              @icon="plus"
            >
              {{t "publicationSection.publication-add"}}
            </Auk::Button>
          </Auk::Toolbar::Item>
          <Auk::Toolbar::Item>
            <Auk::Button
              @skin="primary"
              @icon="plus"
            >
              {{t "publicationSection.publication-request"}}
            </Auk::Button>
          </Auk::Toolbar::Item>
        </Auk::Toolbar::Group>
      </Auk::Toolbar>
    </Auk::Panel::Header>
    <Auk::Panel::Body class="auk-u-bg-alt">
      <div class="vlc-procedure-step vlc-procedure-step--nopadding">
        <div class="vlc-procedure-step__badge-wrapper">
          <Auk::Badge
            @skin="default"
            @size="medium"
            @icon="circle-info"
            class="vlc-procedure-step__badge"
          />
        </div>
        <div>
          <p class="auk-u-m-4">
            {{t "util.no-documents-added"}}
          </p>
        </div>
      </div>
    </Auk::Panel::Body>
  </Auk::Panel>
</div>