{{#unless this.loadData.isRunning}}
  <EmberKaleidosWebuniversum::VlUploadedDocument
    @name={{@document.file.filename}}
    @extension={{@document.file.extension}}
    @size={{@document.file.size}}
    @downloadName={{@document.file.filename}}
    @downloadLink={{this.downloadLink}}
    @delete={{@onDelete}}>
    {{#if @allowDocumentContainerEdit}}
      <div class="metadata-container">
        <div class="vlc-input-field-block">
          <WebComponents::VlFormLabel @value={{t "document-name"}} />
          <WebComponents::VlFormInput
            @width="4"
            @value={{mut @document.name}} />
        </div>
        <div class="vlc-input-field-block">
          <WebComponents::VlFormLabel @value={{t "document-type"}} />
          <Utils::RadioDropdownComboSelect
            @options={{this.sortedDocumentTypes}}
            @onSelect={{this.selectDocumentType}}
            @selected={{this.selectedDocumentType}}
          />
        </div>
      </div>
    {{/if}}
  </EmberKaleidosWebuniversum::VlUploadedDocument>
{{/unless}}
