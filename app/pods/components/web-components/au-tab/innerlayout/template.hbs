{{#if @icon}}
  {{#if (eq @layout "icon-right")}}
    <div class="auk-tabs__label">{{yield}}</div>
    <Icon @name={{@icon}} />
  {{else}}
    <Icon @name={{@icon}} />
    <div class="auk-tabs__label">{{yield}} {{#if this.counter}} ({{@counter}}){{/if}}</div>
  {{/if}}
{{else}}
  {{yield}} {{#if this.counter}}({{@counter}}){{/if}}
{{/if}}