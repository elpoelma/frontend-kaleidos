<div class="auk-alert {{this.skin}}" ...attributes>
  <div class="auk-alert__body">
    {{#unless (eq @skin "loading")}}
      <WebComponents::AuBadge @icon="{{this.icon}}" @skin={{@skin}}/>
    {{/unless}}
    {{#if (eq @skin "loading")}}
      <AuLoader/>
    {{/if}}
    <div class="auk-alert__text">
      {{#if @title}}
        <p class="auk-alert__title">{{@title}}</p>
      {{/if}}
      <p class="auk-alert__message">{{@message}}</p>
    </div>
  </div>
  {{#if @isClosable}}
    <WebComponents::AuButton @skin="tertiary" @icon="close" @layout="icon-only">{{t "cancel"}}</WebComponents::AuButton>
  {{/if}}
</div>