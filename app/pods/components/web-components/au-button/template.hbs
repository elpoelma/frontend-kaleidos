{{#if @route}}
  <LinkTo
    class="auk-button {{this.skin}} {{this.size}} {{this.layout}} {{this.disabled}} {{this.block}} {{this.icon}}"
    @route={{@route}}
    @disabled={{@disabled}}
    ...attributes
  >
    <Button::InnerLayout @layout={{@layout}} @icon={{@icon}}>
      {{yield}}
    </Button::InnerLayout>
  </LinkTo>
{{/if}}

{{#if @href}}
  <a class="auk-button {{this.skin}} {{this.size}} {{this.layout}} {{this.disabled}} {{this.block}} {{this.icon}}" href="{{@href}}">
    <Button::InnerLayout @layout={{@layout}} @icon={{@icon}}>
      {{yield}}
    </Button::InnerLayout>
  </a>
{{/if}}

{{#unless (or @href @route)}}
  <button
    class="auk-button {{this.skin}} {{this.size}} {{this.layout}} {{this.disabled}} {{this.block}} {{this.icon}}"
    type="button"
    disabled={{@disabled}}
    ...attributes
  >
    <Button::InnerLayout @layout={{@layout}} @icon={{@icon}}>
      {{yield}}
    </Button::InnerLayout>
  </button>
{{/unless}}