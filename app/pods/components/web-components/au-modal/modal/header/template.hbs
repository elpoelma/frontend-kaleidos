{{#if @custom}}
  {{yield}}
{{else}}
  <div class="au2-modal__header au2-modal__header--bordered">
    <WebComponents::AuToolbar>
      <WebComponents::AuToolbar::Group @position="left">
        <WebComponents::AuToolbar::Item>
          <h2 class="au2-toolbar__title">{{ @title }}</h2>
        </WebComponents::AuToolbar::Item>
      </WebComponents::AuToolbar::Group>
      <WebComponents::AuToolbar::Group @position="right">
        <WebComponents::AuToolbar::Item>
          <WebComponents::AuButton @icon="close" @skin="borderless" @layout="icon-only" {{on "click" this.closeModal}}></WebComponents::AuButton>
        </WebComponents::AuToolbar::Item>
      </WebComponents::AuToolbar::Group>
    </WebComponents::AuToolbar>
  </div>
{{/if}}