<div class="vl-modal-dialog__content">
  <div class="vlc-input-field-block">
    {{web-components/vl-form-label value=(t "date-publication")}}
    {{web-components/vl-datepicker dateChanged=(action "selectDate")}}
  </div>
  <div class="vlc-input-field-block">
    {{web-components/vl-form-label value=(t "title-newsletter")}}
    {{textarea rows="5" class="vl-textarea vl-textarea--block" value=title}}
  </div>
  <div class="vlc-input-field-block">
    {{web-components/vl-form-label value=(t "subtitle-newsletter")}}
    {{textarea rows="5" class="vl-textarea vl-textarea--block" value=subtitle}}
  </div>
  <div class="vlc-input-field-block">
    {{web-components/vl-form-label value=(t "newsletter-doc-date")}}
    {{web-components/vl-datepicker dateChanged=(action "selectDocDate")}}
  </div>
</div>
{{web-components/vl-modal-footer
  isLoading=isLoading
  cancelButtonText=(t "cancel")
  saveButtonText=(t "create")
  cancelAction=(action "close")
  saveAction=(action "createSingleNewsLetter")
}}