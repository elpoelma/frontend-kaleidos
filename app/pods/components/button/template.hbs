{{#if @route}}
  <LinkTo class="vlc-button {{this.skin}} {{this.size}} {{this.layout}} {{this.block}}" @route={{@route}} ...attributes>
    <Button::InnerLayout @layout={{@layout}} @icon={{@icon}}>
      {{yield}}
    </Button::InnerLayout>
  </LinkTo>
{{/if}}

{{#if @href}}
  <a class="vlc-button {{this.skin}} {{this.size}} {{this.layout}} {{this.block}}" href="{{@href}}">
    <Button::InnerLayout @layout={{@layout}} @icon={{@icon}}>
      {{yield}}
    </Button::InnerLayout>
  </a>
{{/if}}

{{#if (not (and @href @route))}}
  <button class="vlc-button {{this.skin}} {{this.size}} {{this.layout}} {{this.block}}" type="button" ...attributes>
    <Button::InnerLayout @layout={{@layout}} @icon={{@icon}}>
      {{yield}}
    </Button::InnerLayout>
  </button>
{{/if}}
