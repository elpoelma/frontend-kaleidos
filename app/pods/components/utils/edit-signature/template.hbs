<div class="vl-modal-dialog__content">
  <div class="vlc-input-field-block">
    <WebComponents::AuLabel>{{t "new-person"}}</WebComponents::AuLabel>
    {{utils/create-person-selector
      selectedItems=selectedPerson
      selectModel=(action "personSelected")
    }}
  </div>
  <div class="vlc-input-field-block">
    <WebComponents::AuLabel>{{t "name"}}</WebComponents::AuLabel>
    {{web-components/vl-form-input value=signatureToEdit.name}}
  </div>
  <div class="vlc-input-field-block">
    <WebComponents::AuLabel>{{t "signature-function"}}</WebComponents::AuLabel>
    {{web-components/vl-form-input value=signatureToEdit.function}}
  </div>
  <div class="vlc-input-field-block">
    <WebComponents::AuLabel>{{t "signature-file"}}</WebComponents::AuLabel>
    {{#if (not uploadedFile)}}
      {{file-uploader
        multipleFiles=false
        uploadedFileAction=(action "getUploadedFile")
      }}
    {{else}}
      <div class="vlc-preview-container">
        <img src="{{downloadUrl}}" alt="{{t "no-signature-yet"}}"/>
        <a href="" {{action "removeFile" uploadedFile}}>
          {{fa-icon "remove"}}
        </a>
      </div>
    {{/if}}
  </div>
</div>
{{web-components/vl-modal-footer
  isLoading=isLoading
  cancelButtonText=(t "cancel")
  saveButtonText=(t "save")
  cancelAction=(action "closeModal")
  saveAction=(action "saveChanges")
}}
