<div class="auk-u-maximize-width auk-u-maximize-height u-padding--left--large u-padding--right--large auk-o-flex auk-o-flex--center">
  <div class="auk-container--small">
    <h1 class="h1 u-spacer--tiny u-padding--bottom--large">{{t "kaleidos"}}</h1>
    <h2 class="h4 auk-u-text-normal u-padding--bottom--large">
      {{t "kaleidos-login-info"}}
    </h2>
    <div>
      <p class="u-spacer--tiny">
        {{t "kaleidos-login-info2"}}
        <a href="https://overheid.vlaanderen.be/ict/ict-diensten/gebruikersbeheer">
          {{t "kaleidos-login-info-gebruikersbeheer-vlaanderen"}}
        </a>
        .
      </p>
      <p class="u-spacer--tiny">
        {{t "kaleidos-login-info-popup-message"}}
      </p>
      <div data-test-route-login-acmidm-container class="u-padding--top--large">
        <Acmidm::Login as |acmidm|>
          <Auk::Button
            @skin="primary"
            @loading={{acmidm.isAuthenticating}}
            @disabled={{acmidm.isAuthenticating}}
            {{on "click" acmidm.login}}
          >
            Meld u aan
          </Auk::Button>
          {{#if acmidm.errorMessage}}
            <Auk::Alert @skin="error" @message={{acmidm.errorMessage}} />
          {{/if}}
      </Acmidm::Login>
      </div>
    </div>

  </div>
</div>